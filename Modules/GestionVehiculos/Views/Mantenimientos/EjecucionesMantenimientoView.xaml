<UserControl x:Class="GestLog.Modules.GestionVehiculos.Views.Mantenimientos.EjecucionesMantenimientoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GestLog.Converters"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600"
             Background="#FAFAFA">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter" />

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#118938" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#118938" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="6" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#37AB4E" />
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#37AB4E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#118938" />
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#118938" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para botones redondos similares a los usados en Planes -->
        <Style x:Key="RoundIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#118938" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BorderBg" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Width="40" Height="40"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderBg" Property="Background" Value="#0D8E35" />
                                <Setter TargetName="BorderBg" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" Opacity="0.18" BlurRadius="10" ShadowDepth="2" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BorderBg" Property="Background" Value="#118938" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="6" ShadowDepth="2" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundSmallIconButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundIconButtonStyle}">
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BorderBg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                                Opacity="0.96"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderBg" Property="Background" Value="#0D8E35" />
                                <Setter TargetName="BorderBg" Property="Opacity" Value="1" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BorderBg" Property="Background" Value="#118938" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.06" BlurRadius="4" ShadowDepth="1" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#EDEDED" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo de encabezados de DataGrid similar al corporativo -->
        <Style x:Key="EjecucionesDataGridHeader" TargetType="DataGridColumnHeader">
            <!-- usar off-white o blanco para encajar con paleta -->
            <Setter Property="Background" Value="#FAFAFA" />
            <Setter Property="Foreground" Value="#504F4E" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="BorderBrush" Value="#E5E5E5" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Height" Value="42" />
            <Setter Property="UseLayoutRounding" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                UseLayoutRounding="True"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"
                                              UseLayoutRounding="True"
                                              SnapsToDevicePixels="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FAFAFA">
        <Grid.Resources>
            <DropShadowEffect x:Key="EjecucionesDataGridShadow" Color="#504F4E" BlurRadius="8" ShadowDepth="2" Opacity="0.18"/>

            <!-- botÃ³n cuadrado pequeÃ±o para acciones dentro de tablas -->
            <Style x:Key="TableActionButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="24" />
                <Setter Property="Height" Value="24" />
                <Setter Property="Background" Value="#118938" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="#118938" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0D8E35" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#118938" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.RowSpan="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="#FAFAFA">
            <StackPanel>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="8,8,8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="ðŸ“‹" FontSize="20" Margin="0,0,8,0" />
                        <TextBlock Text="Ejecuciones de Mantenimiento" 
                                   FontSize="18" FontWeight="Bold" Foreground="#504F4E" 
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="Historial y registro de ejecuciones de mantenimiento" 
                               FontSize="13" Foreground="#9D9D9C" Margin="28,0,0,0" />
                </StackPanel>

                <!-- BotÃ³n de registrar mantenimiento -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Button Style="{StaticResource RoundIconButtonStyle}"
                            Click="BtnOpenPreventivoModal_Click"
                            Foreground="White" FontSize="18"
                            ToolTip="Registrar mantenimiento">
                        âž•
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="8,4,8,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>



            <!-- Tabla de Ejecuciones -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="8" Effect="{StaticResource EjecucionesDataGridShadow}">
                <DataGrid x:Name="EjecucionesList" ItemsSource="{Binding Ejecuciones}"
                          SelectedItem="{Binding SelectedEjecucion}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          ColumnHeaderStyle="{StaticResource EjecucionesDataGridHeader}"
                          Background="White"
                          RowHeight="36"
                          RowHeaderWidth="0"
                          GridLinesVisibility="None"
                          MouseDoubleClick="DataGrid_RowDoubleClick">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Foreground" Value="#504F4E"/>
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E8F5E8"/>
                                    <Setter Property="Foreground" Value="#118938"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="#504F4E"/>
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E8F5E8"/>
                                    <Setter Property="Foreground" Value="#118938"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Plan" Binding="{Binding PlanNombre}" Width="2*" />
                        <DataGridTextColumn Header="Tipo" Binding="{Binding TipoMantenimientoTexto}" Width="1*" />
                        <DataGridTextColumn Header="Extra" Binding="{Binding ExtraordinarioTexto}" Width="0.9*" />
                        <DataGridTextColumn Header="Fecha" Binding="{Binding FechaEjecucion, StringFormat={}{0:dd/MM/yyyy}}" Width="1.2*" />
                        <DataGridTextColumn Header="KM" Binding="{Binding KMAlMomento}" Width="1*" />
                        <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat={}{0:C2}}" Width="1*" />
                        <DataGridTextColumn Header="Responsable" Binding="{Binding ResponsableEjecucion}" Width="1.5*" />
                        <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor}" Width="1.5*" />
                        <DataGridTemplateColumn Header="" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="ðŸ”" Style="{StaticResource TableActionButtonStyle}"
                                            ToolTip="Ver detalles"
                                            Click="DetailButton_Click" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
