<UserControl x:Class="GestLog.Modules.GestionVehiculos.Views.Mantenimientos.PlantillasMantenimientoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GestLog.Converters"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter" />

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#118938" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#118938" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="6" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#37AB4E" />
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#37AB4E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#118938" />
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#118938" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#EDEDED" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="#FAFAFA">
        <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="16,16,16,8">            <StackPanel Orientation="Vertical">
                <TextBlock Text="Plantillas de Mantenimiento" 
                           FontSize="18" FontWeight="Bold" Foreground="#504F4E" />
                <TextBlock Text="Gestionar plantillas de mantenimiento para vehículos" 
                           FontSize="13" Foreground="#9D9D9C" Margin="0,6,0,0" />
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16,8,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" MinWidth="300" />
            </Grid.ColumnDefinitions>            <!-- Lista de Plantillas -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Nueva plantilla" FontSize="14" FontWeight="Bold" Foreground="#504F4E" Margin="0,0,0,10" />

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Nombre:" VerticalAlignment="Center" Foreground="#504F4E" FontSize="12" FontWeight="SemiBold" Margin="0,0,8,0" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding NuevaPlantillaNombre, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30" Padding="8" FontSize="12"
                                 Background="White" BorderBrush="#CCCCCC" BorderThickness="1" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Descripción:" VerticalAlignment="Center" Foreground="#504F4E" FontSize="12" FontWeight="SemiBold" Margin="0,0,8,0" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding NuevaPlantillaDescripcion, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30" Padding="8" FontSize="12"
                                 Background="White" BorderBrush="#CCCCCC" BorderThickness="1" />
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Intervalo KM:" VerticalAlignment="Center" Foreground="#504F4E" FontSize="12" FontWeight="SemiBold" Margin="0,0,8,0" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding NuevoIntervaloKm, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30" Padding="8" FontSize="12"
                                 Background="White" BorderBrush="#CCCCCC" BorderThickness="1" />

                        <TextBlock Grid.Column="3" Text="Intervalo Días:" VerticalAlignment="Center" Foreground="#504F4E" FontSize="12" FontWeight="SemiBold" Margin="0,0,8,0" />
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="1"
                                 Text="{Binding NuevoIntervaloDias, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30" Padding="8" FontSize="12"
                                 Background="White" BorderBrush="#CCCCCC" BorderThickness="1" />
                    </Grid>

                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                        <Button Content="Guardar plantilla"
                                Command="{Binding CrearPlantillaCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,8,0"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToOpacityConverter}, ConverterParameter=Invert}"
                                Opacity="{Binding IsLoading, Converter={StaticResource BooleanToOpacityConverter}, ConverterParameter=Invert}" />

                        <Button Content="Cargar Plantillas"
                                Command="{Binding LoadPlantillasCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToOpacityConverter}, ConverterParameter=Invert}"
                                Opacity="{Binding IsLoading, Converter={StaticResource BooleanToOpacityConverter}, ConverterParameter=Invert}" />                        <Button Content="Limpiar" 
                                Command="{Binding ClearSelectionCommand}"
                                Background="#9D9D9C"
                                Foreground="White"
                                Padding="12,8"
                                FontSize="13"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand" />
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <TextBlock Text="Cargando..." 
                               Foreground="#118938" FontSize="12"
                               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <!-- Error Message -->
                    <Border Background="#FFEBEE" CornerRadius="6" Padding="12"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#C0392B" FontSize="12" 
                                   TextWrapping="Wrap" />
                    </Border>

                    <!-- Success Message -->
                    <Border Background="#E8F5E9" CornerRadius="6" Padding="12"
                            Visibility="{Binding SuccessMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="{Binding SuccessMessage}" 
                                   Foreground="#10B981" FontSize="12" 
                                   TextWrapping="Wrap" />
                    </Border>

                    <!-- Lista -->
                    <ListBox ItemsSource="{Binding Plantillas}" 
                             SelectedItem="{Binding SelectedPlantilla}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="6" Padding="12" 
                                        BorderBrush="#EDEDED" BorderThickness="1" Margin="0,4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="{Binding Nombre}" 
                                                   FontWeight="SemiBold" FontSize="13" Foreground="#1D1D1B" />
                                        <TextBlock Grid.Row="1" Text="{Binding Descripcion}" 
                                                   FontSize="11" Foreground="#9D9D9C" 
                                                   TextTrimming="CharacterEllipsis" Margin="0,4,0,0" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>            <!-- Detalles -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,0,0"
                    Visibility="{Binding SelectedPlantilla, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Detalles de la Plantilla" 
                               FontSize="14" FontWeight="Bold" Foreground="#504F4E" />

                    <StackPanel Orientation="Vertical" Margin="0,16,0,0">
                        <TextBlock Text="Nombre:" FontWeight="SemiBold" Foreground="#504F4E" FontSize="12" />
                        <TextBlock Text="{Binding SelectedPlantilla.Nombre}" 
                                   Foreground="#1D1D1B" FontSize="12" TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                        <TextBlock Text="Descripción:" FontWeight="SemiBold" Foreground="#504F4E" FontSize="12" />
                        <TextBlock Text="{Binding SelectedPlantilla.Descripcion}" 
                                   Foreground="#1D1D1B" FontSize="12" TextWrapping="Wrap" />
                    </StackPanel>                    <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                        <TextBlock Text="Intervalo (KM):" FontWeight="SemiBold" Foreground="#504F4E" FontSize="12" />
                        <TextBlock Text="{Binding SelectedPlantilla.IntervaloKM}" 
                                   Foreground="#1D1D1B" FontSize="12" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                        <TextBlock Text="Intervalo (Días):" FontWeight="SemiBold" Foreground="#504F4E" FontSize="12" />
                        <TextBlock Text="{Binding SelectedPlantilla.IntervaloDias}" 
                                   Foreground="#1D1D1B" FontSize="12" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                        <TextBlock Text="Estado:" FontWeight="SemiBold" Foreground="#504F4E" FontSize="12" />
                        <TextBlock Text="{Binding SelectedPlantilla.Activo}" 
                                   Foreground="#1D1D1B" FontSize="12" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
