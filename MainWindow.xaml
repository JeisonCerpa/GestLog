<Window x:Class="GestLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestLog"
        mc:Ignorable="d"
        Title="GestLog - Sistema de Gestión" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
          <!-- Navigation Bar -->
        <Border Grid.Row="0" Background="#34495E" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left side buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnHome" Content="🏠 Home" 
                           Background="#2ECC71" Foreground="White" 
                           Padding="12,6" BorderThickness="0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,10,0" Click="btnHome_Click"/>                    <Button x:Name="btnBack" Content="⬅️ Regresar" 
                           Background="#E74C3C" Foreground="White" 
                           Padding="12,6" BorderThickness="0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,15,0" Click="btnBack_Click"
                           Visibility="Collapsed"/>
                      
                    <TextBlock x:Name="txtCurrentView" Text="Home"
                              Foreground="White" FontSize="16" FontWeight="SemiBold" 
                              VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                  <!-- Right side config button -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Indicador de estado de base de datos -->
                    <Border x:Name="DatabaseStatusBorder" 
                            Background="#E74C3C" 
                            CornerRadius="3" 
                            Padding="8,4" 
                            Margin="0,0,10,0"
                            ToolTip="Estado de conexión a base de datos">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="DatabaseStatusIcon" 
                                      Text="❌" 
                                      Foreground="White" 
                                      FontWeight="Bold" 
                                      Margin="0,0,5,0"/>
                            <TextBlock x:Name="DatabaseStatusText" 
                                      Text="Desconectado" 
                                      Foreground="White" 
                                      FontSize="11" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                      <Button x:Name="btnConfig" Content="⚙️" 
                           Background="#3498DB" Foreground="White" 
                           Padding="10,10" BorderThickness="0"
                           FontWeight="SemiBold" FontSize="16"
                           Width="40" Height="40"
                           ToolTip="Configuración"
                           Click="btnConfig_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ContentControl x:Name="contentPanel" Grid.Row="1"/>
    </Grid>
</Window>
