<UserControl x:Class="GestLog.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestLog.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Padding="30,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0F7A30" Offset="0"/>
                    <GradientStop Color="#0D6B28" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="Sistema de Gestión" 
                      FontFamily="Myriad Pro" FontSize="20" FontWeight="SemiBold" 
                      Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="1" 
                                    ShadowDepth="1" 
                                    Opacity="0.2"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,40">
                
                <!-- Welcome Section -->
                <Border Background="#F8F9FA" Padding="40,30" CornerRadius="12" Margin="0,0,0,40">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        BlurRadius="8" 
                                        ShadowDepth="2" 
                                        Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Bienvenido al Sistema GestLog" 
                                  FontFamily="Myriad Pro" FontSize="32" FontWeight="Bold" 
                                  Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Sistema modular de gestión que integra múltiples herramientas de software bajo una interfaz unificada y profesional." 
                                  FontFamily="Myriad Pro" FontSize="18" Foreground="#5D6D7E" 
                                  TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Action Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Herramientas Card -->
                    <Border Grid.Column="0" Background="White" Padding="35,30" CornerRadius="16" BorderBrush="#E5E5E5" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" 
                                            BlurRadius="12" 
                                            ShadowDepth="3" 
                                            Opacity="0.10"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Background="#118938" Width="80" Height="80" CornerRadius="40" HorizontalAlignment="Center" Margin="0,0,0,20">
                                <TextBlock Text="🛠️" FontFamily="Myriad Pro" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Herramientas" FontFamily="Myriad Pro" FontSize="24" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#2C3E50" Margin="0,0,0,15"/>
                            <TextBlock Text="Accede a todas las herramientas disponibles en el sistema de gestión empresarial" 
                                      FontFamily="Myriad Pro" FontSize="16" Foreground="#7F8C8D" TextWrapping="Wrap" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,25"/>
                            <Button Name="btnIrHerramientas" Content="Ir a Herramientas" 
                                   Background="#118938" Foreground="White" 
                                   Padding="20,12" BorderThickness="0" CornerRadius="8"
                                   FontFamily="Myriad Pro" FontWeight="SemiBold" FontSize="16"
                                   Click="btnIrHerramientas_Click">
                                <Button.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                    BlurRadius="4" 
                                                    ShadowDepth="1" 
                                                    Opacity="0.12"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- Info Card -->
                    <Border Grid.Column="2" Background="White" Padding="35,30" CornerRadius="16" BorderBrush="#E5E5E5" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" 
                                            BlurRadius="12" 
                                            ShadowDepth="3" 
                                            Opacity="0.10"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Background="#2B8E3F" Width="80" Height="80" CornerRadius="40" HorizontalAlignment="Center" Margin="0,0,0,20">
                                <TextBlock Text="📊" FontFamily="Myriad Pro" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Información" FontFamily="Myriad Pro" FontSize="24" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#2C3E50" Margin="0,0,0,15"/>
                            <TextBlock Text="Estado del sistema y información general de los módulos integrados en la plataforma" 
                                      FontFamily="Myriad Pro" FontSize="16" Foreground="#7F8C8D" TextWrapping="Wrap" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,25"/>
                            <Button Name="btnInfo" Content="Ver Información" 
                                   Background="#2B8E3F" Foreground="White" 
                                   Padding="20,12" BorderThickness="0" CornerRadius="8"
                                   FontFamily="Myriad Pro" FontWeight="SemiBold" FontSize="16"
                                   Click="btnInfo_Click">
                                <Button.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                    BlurRadius="4" 
                                                    ShadowDepth="1" 
                                                    Opacity="0.12"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
