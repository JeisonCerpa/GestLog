<Window x:Class="GestLog.Views.Shared.ObservacionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Observación al dar de baja" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Padding="12" Background="White">
        <StackPanel Width="420">
            <TextBlock Text="Ingrese la observación obligatoria para dar de baja:" TextWrapping="Wrap" Margin="0,0,0,8"/>
            <TextBox x:Name="ObservacionTextBox" AcceptsReturn="True" Height="120" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" IsCancel="True" Width="90" Margin="0,0,8,0"/>
                <Button Content="Confirmar baja" Width="110" IsDefault="True" Click="OnConfirmar_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
