<Window x:Class="Views.Usuarios.PermisoManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Permisos" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FAFAFA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Gestión de Permisos" FontSize="26" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,20"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <!-- Lista de permisos -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBox x:Name="txtBuscarPermiso" Margin="0,0,0,10"/>
                <Button Content="Buscar" Command="{Binding BuscarPermisosCommand}" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Permisos}" SelectedItem="{Binding PermisoSeleccionado, Mode=TwoWay}" DisplayMemberPath="Nombre" Height="300"/>
                <Button Content="Registrar nuevo permiso" Command="{Binding RegistrarPermisoCommand}" Margin="0,10,0,0"/>
            </StackPanel>
            <!-- Detalle y edición -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Detalle de Permiso" FontSize="18" FontWeight="SemiBold" Foreground="#388E3C" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Nombre:" Width="100"/>
                        <TextBox Text="{Binding PermisoSeleccionado.Nombre, Mode=TwoWay}" Width="200" Style="{StaticResource WatermarkTextBoxStyle}" Tag="Nombre del permiso"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Descripción:" Width="100"/>
                        <TextBox Text="{Binding PermisoSeleccionado.Descripcion, Mode=TwoWay}" Width="200" Style="{StaticResource WatermarkTextBoxStyle}" Tag="Descripción"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Editar" Command="{Binding EditarPermisoCommand}" Margin="0,0,10,0"/>
                        <Button Content="Desactivar" Command="{Binding DesactivarPermisoCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
