<UserControl x:Class="GestLog.Views.Usuarios.TipoDocumentoManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="540" Width="900">
    <Grid Background="#FAFAFA" Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top" Margin="0,0,0,24">
            <TextBlock Text="Gesti贸n de Tipos de Documento" FontSize="28" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,32,0"/>
            <TextBox x:Name="txtBuscarTipoDocumento" Width="220" Height="36" Margin="0,0,12,0" Background="#F5F5F5" BorderBrush="#BDBDBD" BorderThickness="1" FontSize="15" VerticalContentAlignment="Center"/>
            <Button Content="Buscar" Command="{Binding BuscarTiposDocumentoCommand}" Style="{StaticResource PrimaryButtonStyle}" Height="36" Width="100" Margin="0,0,12,0"/>
            <Button Content="Registrar nuevo tipo" Height="36" Width="180" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding AbrirRegistroTipoDocumentoCommand}"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <!-- DataGrid de tipos de documento -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="18" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,24,0">
                <DataGrid ItemsSource="{Binding TiposDocumento}" SelectedItem="{Binding TipoDocumentoSeleccionado, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" RowHeight="38" FontSize="15" HeadersVisibility="Column" SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
                        <DataGridTextColumn Header="Descripci贸n" Binding="{Binding Descripcion}" Width="3*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            <!-- Detalle y edici贸n -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Detalle de Tipo de Documento" FontSize="20" FontWeight="SemiBold" Foreground="#388E3C" Margin="0,0,0,18"/>
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Nombre" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TipoDocumentoSeleccionado.Nombre, Mode=TwoWay}" Width="240" Height="32" Background="#F5F5F5" BorderBrush="#BDBDBD" BorderThickness="1" FontSize="15" IsEnabled="{Binding TipoDocumentoSeleccionado, Converter={StaticResource NullToBoolConverter}}"/>
                        <TextBlock Text="{Binding MensajeError}" Foreground="#D32F2F" FontWeight="SemiBold" Margin="0,4,0,0" Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <TextBlock Text="Descripci贸n" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TipoDocumentoSeleccionado.Descripcion, Mode=TwoWay}" Width="240" Height="32" Background="#F5F5F5" BorderBrush="#BDBDBD" BorderThickness="1" FontSize="15" IsEnabled="{Binding TipoDocumentoSeleccionado, Converter={StaticResource NullToBoolConverter}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Right">
                        <Button Content="Editar" Command="{Binding EditarTipoDocumentoCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="110" Height="32" Margin="0,0,10,0" IsEnabled="{Binding TipoDocumentoSeleccionado, Converter={StaticResource NullToBoolConverter}}"/>
                        <Button Content="Desactivar" Command="{Binding DesactivarTipoDocumentoCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="110" Height="32" IsEnabled="{Binding TipoDocumentoSeleccionado, Converter={StaticResource NullToBoolConverter}}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
