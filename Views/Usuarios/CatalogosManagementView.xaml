<UserControl x:Class="GestLog.Views.Usuarios.CatalogosManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="600" Width="1100"
    Loaded="UserControl_Loaded">
    <Grid Background="#FAFAFA" Margin="32">
        <StackPanel>
            <TextBlock Text="Gestión de Catálogos" FontSize="28" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,24"/>
            <TabControl>
                <TabItem Header="Cargos">
                    <!-- Sección Cargos -->
                    <Border Background="White" CornerRadius="10" Padding="18" BorderBrush="#E0E0E0" BorderThickness="1" Margin="16">
                        <StackPanel>
                            <TextBlock Text="Cargos" FontSize="20" FontWeight="SemiBold" Foreground="#388E3C" Margin="0,0,0,18"/>
                            <Button Content="Registrar nuevo cargo" Height="32" Width="180" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding AbrirModalNuevoCargoCommand}" Margin="0,0,0,12"/>
                            <DataGrid ItemsSource="{Binding Cargos}" SelectedItem="{Binding CargoSeleccionado, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" RowHeight="38" FontSize="15" HeadersVisibility="Column" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
                                    <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="3*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Right">
                                <Button Content="Editar" Command="{Binding AbrirModalEditarCargoCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="110" Height="32" Margin="0,0,10,0" IsEnabled="{Binding CargoSeleccionado, Converter={StaticResource NullToBoolConverter}}"/>
                                <Button Content="Desactivar" Command="{Binding DesactivarCargoCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="110" Height="32" IsEnabled="{Binding CargoSeleccionado, Converter={StaticResource NullToBoolConverter}}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding MensajeErrorCargo}" Foreground="#D32F2F" FontWeight="SemiBold" Margin="0,14,0,0"/>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="Tipos de Documento">
                    <!-- Sección Tipos de Documento -->
                    <Border Background="White" CornerRadius="10" Padding="18" BorderBrush="#E0E0E0" BorderThickness="1" Margin="16">
                        <StackPanel>
                            <TextBlock Text="Tipos de Documento" FontSize="20" FontWeight="SemiBold" Foreground="#388E3C" Margin="0,0,0,18"/>
                            <Button Content="Registrar nuevo tipo" Height="32" Width="180" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding RegistrarTipoDocumentoCommand}" Margin="0,0,0,12"/>
                            <DataGrid ItemsSource="{Binding TiposDocumento}" SelectedItem="{Binding TipoDocumentoSeleccionado, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" RowHeight="38" FontSize="15" HeadersVisibility="Column" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
                                    <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="3*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Right">
                                <Button Content="Editar" Command="{Binding EditarTipoDocumentoCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="110" Height="32" Margin="0,0,10,0" IsEnabled="{Binding TipoDocumentoSeleccionado, Converter={StaticResource NullToBoolConverter}}"/>
                                <Button Content="Desactivar" Command="{Binding DesactivarTipoDocumentoCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="110" Height="32" IsEnabled="{Binding TipoDocumentoSeleccionado, Converter={StaticResource NullToBoolConverter}}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding MensajeErrorTipoDocumento}" Foreground="#D32F2F" FontWeight="SemiBold" Margin="0,14,0,0"/>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="Roles">
                    <!-- Aquí irá la gestión de roles -->
                    <Border Background="White" CornerRadius="10" Padding="18" BorderBrush="#E0E0E0" BorderThickness="1" Margin="16">
                        <StackPanel>
                            <TextBlock Text="Gestión de Roles" FontSize="20" FontWeight="SemiBold" Foreground="#388E3C" Margin="0,0,0,18"/>
                            <!-- TODO: Implementar vista y comandos para roles -->
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="Permisos">
                    <!-- Aquí irá la gestión de permisos -->
                    <Border Background="White" CornerRadius="10" Padding="18" BorderBrush="#E0E0E0" BorderThickness="1" Margin="16">
                        <StackPanel>
                            <TextBlock Text="Gestión de Permisos" FontSize="20" FontWeight="SemiBold" Foreground="#388E3C" Margin="0,0,0,18"/>
                            <!-- TODO: Implementar vista y comandos para permisos -->
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>
