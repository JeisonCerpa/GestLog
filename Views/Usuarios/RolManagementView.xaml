<Window x:Class="Views.Usuarios.RolManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Roles" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FAFAFA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Gestión de Roles" FontSize="26" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,20"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <!-- Lista de roles -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBox x:Name="txtBuscarRol" Margin="0,0,0,10"/>
                <Button Content="Buscar" Command="{Binding BuscarRolesCommand}" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Roles}" SelectedItem="{Binding RolSeleccionado, Mode=TwoWay}" DisplayMemberPath="Nombre" Height="300"/>
                <Button Content="Registrar nuevo rol" Command="{Binding RegistrarRolCommand}" Margin="0,10,0,0"/>
            </StackPanel>
            <!-- Detalle y edición -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Detalle de Rol" FontSize="18" FontWeight="SemiBold" Foreground="#388E3C" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Nombre:" Width="100"/>
                        <TextBox Text="{Binding RolSeleccionado.Nombre, Mode=TwoWay}" Style="{StaticResource WatermarkTextBoxStyle}" Tag="Nombre del rol" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Descripción:" Width="100"/>
                        <TextBox Text="{Binding RolSeleccionado.Descripcion, Mode=TwoWay}" Style="{StaticResource WatermarkTextBoxStyle}" Tag="Descripción" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Editar" Command="{Binding EditarRolCommand}" Margin="0,0,10,0"/>
                        <Button Content="Desactivar" Command="{Binding DesactivarRolCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
