<UserControl x:Class="GestLog.Views.Configuration.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"><UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,1,0">
            <StackPanel Margin="15">
                <!-- Header -->
                <TextBlock Text="⚙️ Configuración" 
                          FontSize="20" FontWeight="SemiBold" 
                          Foreground="#2C3E50" Margin="0,0,0,20"/>
                
                <!-- Navigation Menu -->
                <StackPanel Name="NavigationPanel">
                    
                    <Button Name="btnGeneral" 
                           Content="📋 General" 
                           Style="{StaticResource ConfigNavButtonStyle}"
                           Click="NavigationButton_Click"
                           Tag="General"/>
                    
                    <Button Name="btnUI" 
                           Content="🎨 Interfaz" 
                           Style="{StaticResource ConfigNavButtonStyle}"
                           Click="NavigationButton_Click"
                           Tag="UI"/>
                    
                    <Button Name="btnLogging" 
                           Content="📝 Logging" 
                           Style="{StaticResource ConfigNavButtonStyle}"
                           Click="NavigationButton_Click"
                           Tag="Logging"/>
                    
                    <Button Name="btnPerformance" 
                           Content="⚡ Rendimiento" 
                           Style="{StaticResource ConfigNavButtonStyle}"
                           Click="NavigationButton_Click"
                           Tag="Performance"/>
                    
                    <Button Name="btnModules" 
                           Content="🔧 Módulos" 
                           Style="{StaticResource ConfigNavButtonStyle}"
                           Click="NavigationButton_Click"
                           Tag="Modules"/>
                    
                </StackPanel>
                
                <!-- Actions Panel -->
                <StackPanel Margin="0,30,0,0">
                    <Button Name="btnSave" 
                           Content="💾 Guardar" 
                           Background="#27AE60" 
                           Foreground="White"
                           Padding="10,8" 
                           BorderThickness="0" 
                           FontWeight="SemiBold"
                           Margin="0,5"
                           Click="SaveButton_Click"/>
                    
                    <Button Name="btnReset" 
                           Content="🔄 Restablecer" 
                           Background="#E67E22" 
                           Foreground="White"
                           Padding="10,8" 
                           BorderThickness="0" 
                           FontWeight="SemiBold"
                           Margin="0,5"
                           Click="ResetButton_Click"/>
                    
                    <Button Name="btnExport" 
                           Content="📤 Exportar" 
                           Background="#3498DB" 
                           Foreground="White"
                           Padding="10,8" 
                           BorderThickness="0" 
                           FontWeight="SemiBold"
                           Margin="0,5"
                           Click="ExportButton_Click"/>
                    
                    <Button Name="btnImport" 
                           Content="📥 Importar" 
                           Background="#9B59B6" 
                           Foreground="White"
                           Padding="10,8" 
                           BorderThickness="0" 
                           FontWeight="SemiBold"
                           Margin="0,5"
                           Click="ImportButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">        <ContentPresenter Name="ConfigContentPresenter" Margin="30"/>
        </ScrollViewer>
        
    </Grid>
    
</UserControl>
