<UserControl x:Class="GestLog.Views.IdentidadCatalogos.Catalogos.CargoManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500" Width="800">
    <Grid Background="#FAFAFA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Gesti贸n de Cargos" FontSize="26" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,20"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <!-- Lista de cargos -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBox x:Name="txtBuscarCargo" Margin="0,0,0,10"/>
                <Button Content="Buscar" Command="{Binding BuscarCargosCommand}" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Cargos}" SelectedItem="{Binding CargoSeleccionado, Mode=TwoWay}" DisplayMemberPath="Nombre" Height="300"/>
                <Button Content="Registrar nuevo cargo" Command="{Binding RegistrarCargoCommand}" Margin="0,10,0,0"/>
            </StackPanel>
            <!-- Detalle y edici贸n -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Detalle de Cargo" FontSize="18" FontWeight="SemiBold" Foreground="#388E3C" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Nombre:" Width="100"/>
                        <TextBox Text="{Binding CargoSeleccionado.Nombre, Mode=TwoWay}" Width="200" Style="{StaticResource WatermarkTextBoxStyle}" Tag="Nombre del cargo"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Descripci贸n:" Width="100"/>
                        <TextBox Text="{Binding CargoSeleccionado.Descripcion, Mode=TwoWay}" Width="200" Style="{StaticResource WatermarkTextBoxStyle}" Tag="Descripci贸n"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Editar" Command="{Binding EditarCargoCommand}" Margin="0,0,10,0"/>
                        <Button Content="Desactivar" Command="{Binding DesactivarCargoCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
