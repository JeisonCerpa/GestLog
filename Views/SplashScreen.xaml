<Window x:Class="GestLog.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Width="600" Height="400">
    <Grid>
        <Image Source="/Assets/Simics.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="StatusText" Text="" FontSize="14" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40" Visibility="Collapsed"/>
    </Grid>
</Window>
