<Window x:Class="GestLog.Views.Tools.DaaterProccesor.FilteredDataView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔍 Filtrar Consolidado - Productos de Acero" Height="550" Width="1000" 
        Background="#F8F9FA" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="🔍 Filtrar Datos Consolidados" FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Filtros especializados para productos de acero y perfiles metálicos" 
                          FontSize="12" Foreground="#BDC3C7" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Data Grid -->
        <DataGrid x:Name="FilteredDataGrid" Grid.Row="1" AutoGenerateColumns="True" 
                 Margin="15" Background="White" BorderBrush="#DEE2E6" BorderThickness="1"
                 GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                 AlternatingRowBackground="#F8F9FA" RowBackground="White"/>
        
        <!-- Actions Panel -->
        <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="txtRecordCount" Text="Registros: 0" FontSize="12" 
                          Foreground="#6C757D" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button Content="🔄 Aplicar Filtros" Background="#17A2B8" Foreground="White" 
                       Padding="12,8" BorderThickness="0" FontWeight="SemiBold" Margin="0,0,10,0"
                       Click="ApplyFilters_Click"/>
                <Button x:Name="btnExportExcel" Content="📊 Exportar a Excel" Background="#28A745" Foreground="White" 
                       Padding="12,8" BorderThickness="0" FontWeight="SemiBold"
                       Click="ExportToExcel_Click" IsEnabled="False"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
