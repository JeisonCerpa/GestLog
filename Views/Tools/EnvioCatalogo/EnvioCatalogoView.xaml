<UserControl x:Class="GestLog.Views.Tools.EnvioCatalogo.EnvioCatalogoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GestLog.Converters"
             xmlns:controls="clr-namespace:GestLog.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:PathToFileNameConverter x:Key="PathToFileNameConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>
    
    <Grid Background="White">
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top" Background="#0f8937" Padding="15">
                <StackPanel>
                    <TextBlock Text="📧 Envío de Catálogo" 
                              FontSize="24" FontWeight="SemiBold" 
                              Foreground="White" HorizontalAlignment="Center"/>                    <TextBlock Text="Envío masivo del catálogo de productos y servicios a múltiples clientes" 
                              FontSize="14" Foreground="#E8F5E8" 
                              HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <TabControl Background="White" BorderThickness="0">
                
                <!-- Tab: Configuración y Envío -->
                <TabItem Header="📤 Configurar y Enviar" FontSize="14" Padding="15,8">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Panel de Configuración de Archivos -->
                        <Border Grid.Row="0" Background="#F8F9FA" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Archivo Excel -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="📊 Archivo Excel con Emails:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"/>
                                
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <Button Content="📁 Seleccionar Excel" 
                                           Background="#3498DB" Foreground="White"
                                           Padding="12,8" BorderThickness="0" FontWeight="SemiBold"
                                           Command="{Binding SelectExcelFileCommand}"
                                           ToolTip="Seleccionar archivo Excel que contiene los emails de destinatarios"/>
                                    
                                    <TextBlock Text="{Binding ExcelFileName}" 
                                              VerticalAlignment="Center" Margin="0,8,0,0"
                                              Foreground="#7F8C8D" FontStyle="Italic" FontSize="11"
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Archivo del Catálogo -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="📄 Archivo del Catálogo:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"/>
                                
                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <Button Content="📋 Seleccionar Catálogo" 
                                           Background="#9B59B6" Foreground="White"
                                           Padding="12,8" BorderThickness="0" FontWeight="SemiBold"
                                           Command="{Binding SelectCatalogoFileCommand}"
                                           ToolTip="Seleccionar archivo PDF del catálogo a enviar"/>
                                    
                                    <TextBlock Text="{Binding CatalogoFileName}" 
                                              VerticalAlignment="Center" Margin="0,8,0,0"
                                              Foreground="#7F8C8D" FontStyle="Italic" FontSize="11"
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>                                <!-- Información de archivos -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" 
                                           Orientation="Horizontal" HorizontalAlignment="Center">
                                    
                                    <!-- Estado Excel -->
                                    <Border Padding="8,4" CornerRadius="3" Margin="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E74C3C"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasExcelFile}" Value="True">
                                                        <Setter Property="Background" Value="#27AE60"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Foreground="White" FontSize="10" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="❌ Sin Excel"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasExcelFile}" Value="True">
                                                            <Setter Property="Text" Value="✅ Excel OK"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    
                                    <!-- Estado Catálogo -->
                                    <Border Padding="8,4" CornerRadius="3" Margin="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E74C3C"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasCatalogFile}" Value="True">
                                                        <Setter Property="Background" Value="#27AE60"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Foreground="White" FontSize="10" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="❌ Sin Catálogo"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasCatalogFile}" Value="True">
                                                            <Setter Property="Text" Value="✅ Catálogo OK"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>                        <!-- Panel de Información sobre Automatización -->
                        <Border Grid.Row="1" Background="#E8F6F3" Padding="15" CornerRadius="5" Margin="0,0,0,15" BorderBrush="#1ABC9C" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="ℹ️ Proceso Automatizado" 
                                          FontSize="16" FontWeight="SemiBold" Foreground="#16A085"/>
                                <TextBlock Text="• El asunto del email es automático: 'Importadores y Comercializadores de Aceros y Servicios - Simics Group SAS'" 
                                          FontSize="12" Foreground="#2C3E50" Margin="0,5,0,2"/>
                                <TextBlock Text="• Los datos de cliente (nombre y NIT) se extraen automáticamente del archivo Excel" 
                                          FontSize="12" Foreground="#2C3E50" Margin="0,2,0,2"/>
                                <TextBlock Text="• El sistema enviará un email personalizado a cada destinatario del Excel adjuntando el catálogo PDF" 
                                          FontSize="12" Foreground="#2C3E50" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Botones de Acción -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                            <Button Content="🚀 Enviar Catálogo" 
                                   Background="#27AE60" Foreground="White"
                                   Padding="25,12" BorderThickness="0" FontWeight="Bold"
                                   FontSize="14" Margin="5"
                                   Command="{Binding SendCatalogoCommand}"
                                   IsEnabled="{Binding CanSendCatalogo}"
                                   ToolTip="Enviar catálogo a todos los emails del Excel">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#27AE60"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#229954"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#BDC3C7"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="🔄 Reiniciar" 
                                   Background="#95A5A6" Foreground="White"
                                   Padding="15,12" BorderThickness="0" FontWeight="SemiBold"
                                   FontSize="14" Margin="5"
                                   Command="{Binding ResetProgressCommand}"
                                   ToolTip="Reiniciar progreso y estadísticas"/>
                        </StackPanel>

                        <!-- Panel de Progreso -->
                        <Grid Grid.Row="3" 
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Barra de progreso -->
                            <controls:SimpleProgressBar Grid.Row="0"
                                                       ProgressValue="{Binding ProgressValue}"
                                                       Title="📧 Enviando Catálogo"
                                                       StatusMessage="{Binding StatusMessage}"
                                                       BackgroundColor="#27AE60"
                                                       TitleColor="White"
                                                       PercentageColor="#FFFFFF"
                                                       MessageColor="#E8F5E8"
                                                       BarForeground="#2ECC71"
                                                       BarBackground="#1E8449"
                                                       BarHeight="18"/>

                            <!-- Botón de cancelar -->
                            <Button Grid.Row="2"
                                   Content="❌ Cancelar Envío" 
                                   Background="#DC3545" Foreground="White" 
                                   Padding="10,6" BorderThickness="0" 
                                   FontWeight="SemiBold" FontSize="11"
                                   HorizontalAlignment="Center"
                                   Command="{Binding CancelSendingCommand}"
                                   ToolTip="Cancelar el envío en curso"/>
                        </Grid>

                        <!-- Panel de Estadísticas -->
                        <Border Grid.Row="4" Background="#F8F9FA" Padding="15" CornerRadius="5"
                               Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="📊 Total" FontWeight="SemiBold" FontSize="12" 
                                              Foreground="#2C3E50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalEmails}" FontSize="20" FontWeight="Bold" 
                                              Foreground="#3498DB" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="🔄 Procesados" FontWeight="SemiBold" FontSize="12" 
                                              Foreground="#2C3E50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ProcessedEmails}" FontSize="20" FontWeight="Bold" 
                                              Foreground="#F39C12" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="✅ Exitosos" FontWeight="SemiBold" FontSize="12" 
                                              Foreground="#2C3E50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding SuccessfulSends}" FontSize="20" FontWeight="Bold" 
                                              Foreground="#27AE60" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                    <TextBlock Text="❌ Fallidos" FontWeight="SemiBold" FontSize="12" 
                                              Foreground="#2C3E50" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding FailedSends}" FontSize="20" FontWeight="Bold" 
                                              Foreground="#E74C3C" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Tab: Configuración SMTP -->
                <TabItem Header="⚙️ Configuración SMTP" FontSize="14" Padding="15,8">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Información -->
                        <Border Grid.Row="0" Background="#FFF3CD" BorderBrush="#FFECB5" BorderThickness="1" 
                               Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="⚠️ Configuración SMTP Independiente" 
                                          FontWeight="Bold" FontSize="14" Foreground="#856404"/>
                                <TextBlock Text="Esta configuración es específica para el módulo de Envío de Catálogo y es independiente de la configuración SMTP de Gestión de Cartera." 
                                          FontSize="12" Foreground="#856404" TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Configuración SMTP -->
                        <Border Grid.Row="1" Background="#F8F9FA" Padding="20" CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Servidor SMTP -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="🌐 Servidor SMTP:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"/>
                                <TextBox Grid.Row="2" Grid.Column="0" Text="{Binding SmtpServer, UpdateSourceTrigger=PropertyChanged}" 
                                        Padding="8" FontSize="12"/>

                                <!-- Puerto -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="🔌 Puerto:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding SmtpPort, UpdateSourceTrigger=PropertyChanged}" 
                                        Padding="8" FontSize="12"/>

                                <!-- Email/Usuario -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="👤 Email/Usuario:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"/>
                                <TextBox Grid.Row="6" Grid.Column="0" Text="{Binding SmtpUsername, UpdateSourceTrigger=PropertyChanged}" 
                                        Padding="8" FontSize="12"/>

                                <!-- Contraseña -->
                                <TextBlock Grid.Row="4" Grid.Column="2" Text="🔒 Contraseña:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"/>
                                <PasswordBox Grid.Row="6" Grid.Column="2" x:Name="SmtpPasswordBox"
                                           Padding="8" FontSize="12"
                                           PasswordChanged="SmtpPasswordBox_PasswordChanged"/>

                                <!-- SSL -->
                                <CheckBox Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" 
                                         Content="🔐 Usar SSL/TLS (Recomendado)" 
                                         IsChecked="{Binding EnableSsl}" 
                                         FontWeight="SemiBold" Foreground="#2C3E50" 
                                         HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>                        <!-- Botones de Configuración SMTP -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Content="💾 Guardar Configuración" 
                                   Background="#0f8937" Foreground="White"
                                   Padding="18,8" BorderThickness="0" FontWeight="SemiBold"
                                   Margin="5"
                                   Command="{Binding SaveSmtpConfigurationCommand}"
                                   ToolTip="Guardar la configuración SMTP sin enviar email de prueba">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#0f8937"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#0d7230"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button Content="🧪 Probar Configuración" 
                                   Background="#3498DB" Foreground="White"
                                   Padding="15,8" BorderThickness="0" FontWeight="SemiBold"
                                   Margin="5"
                                   Command="{Binding TestSmtpCommand}"
                                   ToolTip="Enviar un email de prueba para validar la configuración"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</UserControl>
