<UserControl x:Class="GestLog.Views.Tools.GestionMantenimientos.CronogramaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:GestLog.Controls"
             xmlns:converters="clr-namespace:GestLog.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#FAFAFA">
    <UserControl.Resources>
        <!-- ...otros recursos... -->
        <converters:CardButtonBackgroundColorConverter x:Key="CardButtonBackgroundColorConverter" />
        <converters:CardButtonForegroundColorConverter x:Key="CardButtonForegroundColorConverter" />
        <converters:CardButtonBorderColorConverter x:Key="CardButtonBorderColorConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter"/>
        <!-- ...otros recursos... -->
    </UserControl.Resources>
    <Grid Background="#FAFAFA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Nuevo encabezado simplificado -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <TextBlock Text="Cronograma" FontSize="24" FontWeight="Bold" Foreground="#118938" Margin="0,0,18,0" VerticalAlignment="Center"/>
                <TextBlock Text="AÃ±o:" VerticalAlignment="Center" Margin="0,0,4,0" FontWeight="SemiBold" FontSize="14"/>
                <ComboBox Width="90"
                          ItemsSource="{Binding AniosDisponibles}"
                          SelectedItem="{Binding AnioSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          VerticalAlignment="Center"
                          Margin="0,0,0,0"
                          FontSize="14"
                          Padding="4,2"
                          BorderBrush="#1976D2"
                          BorderThickness="1"
                          Background="#F5F8FF"/>            </StackPanel>            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1">
                <!-- BotÃ³n Refrescar -->
                <Button Content="ðŸ”„"
                        Command="{Binding RefreshCommand}"
                        FontSize="16"
                        Padding="10,4"
                        Margin="0,0,8,0"
                        Background="#118938"
                        Foreground="White"
                        BorderBrush="#118938"
                        BorderThickness="1.5"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"                        ToolTip="Refrescar cronograma"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" 
                        Opacity="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="#118938" Opacity="0.18"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Border x:Name="BorderElement" CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{TemplateBinding Padding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="MouseOver">
                                                        <Storyboard>
                                                            <ColorAnimation To="#0D6B2F" Duration="0" Storyboard.TargetName="BorderElement" Storyboard.TargetProperty="Background.Color"/>
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <!-- BotÃ³n Exportar -->
                <Button Content="Exportar"
                        Command="{Binding ExportarCronogramasCommand}"
                        FontSize="14"
                        Padding="16,4"
                        Background="#118938"
                        Foreground="White"
                        BorderBrush="#118938"
                        BorderThickness="1.5"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding CanExportCronograma}" 
                        Opacity="{Binding CanExportCronograma, Converter={StaticResource BooleanToOpacityConverter}}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="#118938" Opacity="0.18"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>        <!-- Vista semanal tipo calendario -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#FAFAFA">
            <Grid Background="#FAFAFA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Elimino el tÃ­tulo para aprovechar el espacio -->
                <Grid Grid.Row="0" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ItemsControl ItemsSource="{Binding PlaceholderSemanas}" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="13" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E0E0E0" CornerRadius="8" Margin="2" BorderThickness="0"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl ItemsSource="{Binding Semanas}" Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="13" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <!-- Border principal de la tarjeta -->
                                    <Border x:Name="SemanaCard" CornerRadius="8" Padding="2" Margin="2" BorderThickness="4"
                                            BorderBrush="{Binding ColorSemana}"
                                            Background="White"
                                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">                                    <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="{Binding ColorSemana}"/>
                                                <Setter Property="BorderThickness" Value="4"/>
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                                <Style.Triggers>
                                                    <!-- Semana vacÃ­a: sin borde -->
                                                    <DataTrigger Binding="{Binding EsSemanaVacia}" Value="True">
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                    </DataTrigger>
                                                    <!-- Semana actual: solo fondo sutil, sin borde -->
                                                    <DataTrigger Binding="{Binding IsSemanaActual}" Value="True">
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                        <Setter Property="Background" Value="#F8FFF8"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel ToolTipService.ShowDuration="15000" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <StackPanel.ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding TituloSemana}" FontWeight="Bold" FontSize="13"/>
                                                    <ItemsControl ItemsSource="{Binding Mantenimientos}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock>
                                                                    <Run Text="â€¢ "/>
                                                                    <Run Text="{Binding Codigo}"/>
                                                                    <Run Text=" - "/>
                                                                    <Run Text="{Binding Nombre}"/>
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    <TextBlock Text="Sin mantenimientos programados" Foreground="#C0392B" FontWeight="SemiBold" FontSize="11" Visibility="{Binding Mantenimientos.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=False}"/>
                                                </StackPanel>
                                            </StackPanel.ToolTip>                                        <TextBlock Text="{Binding NumeroSemana, StringFormat='Semana {0}'}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" TextWrapping="NoWrap"
                                                       Foreground="#333"/>
                                            <TextBlock Text="{Binding RangoFechas}" FontSize="9" HorizontalAlignment="Center" TextWrapping="NoWrap"
                                                       Foreground="#333"/>
                                            <TextBlock Text="{Binding Mantenimientos.Count, StringFormat='Mantenimientos: {0}'}"
                                                       FontWeight="SemiBold" FontSize="11"
                                                       Foreground="#333"
                                                       HorizontalAlignment="Center" TextWrapping="NoWrap"/>
                                            <Button Content="Ver Detalles"
                                                    Command="{Binding VerSemanaCommand}"
                                                    CommandParameter="{Binding}"
                                                    Margin="0,4,0,0"
                                                    Visibility="{Binding TieneMantenimientos, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    FontSize="11"
                                                    Background="{Binding ColorSemana, Converter={StaticResource CardButtonBackgroundColorConverter}, FallbackValue=LightGray, TargetNullValue=LightGray}"
                                                    Foreground="Black"
                                                    BorderBrush="#CCCCCC"
                                                    BorderThickness="1.5"
                                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                    TextOptions.TextFormattingMode="Display"
                                                    TextOptions.TextRenderingMode="ClearType"
                                                    SnapsToDevicePixels="True">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="6"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </StackPanel>                                </Border>

                                    <!-- Badge "ACTUAL" para semana actual con mÃ¡s margen -->
                                    <Border x:Name="CurrentWeekBadge"
                                            Background="#118938"
                                            CornerRadius="10"
                                            Padding="8,3"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,6,6,0"
                                            Panel.ZIndex="20"
                                            Visibility="{Binding IsSemanaActual, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#118938" Opacity="0.3" BlurRadius="6" ShadowDepth="1"/>
                                        </Border.Effect>
                                        <TextBlock Text="ACTUAL" 
                                                   FontSize="9"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>                                <!-- Rectangle punteado para semanas vacÃ­as -->
                                    <Rectangle x:Name="EmptyWeekIndicator"
                                               Stroke="#BFBFBF" 
                                               StrokeThickness="2" 
                                               RadiusX="8" RadiusY="8" 
                                               Fill="Transparent"
                                               StrokeDashArray="4 2"
                                               Margin="2"
                                               HorizontalAlignment="Stretch" 
                                               VerticalAlignment="Stretch"
                                               Panel.ZIndex="10"
                                               IsHitTestVisible="False">
                                        <Rectangle.Style>
                                            <Style TargetType="Rectangle">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <!-- Solo mostrar punteado si estÃ¡ vacÃ­a -->
                                                    <DataTrigger Binding="{Binding EsSemanaVacia}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <!-- Si es actual Y vacÃ­a, cambiar color del punteado a verde -->
                                                    <DataTrigger Binding="{Binding IsSemanaActualYVacia}" Value="True">
                                                        <Setter Property="Stroke" Value="#118938"/>
                                                        <Setter Property="StrokeThickness" Value="3"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
        <TextBlock Text="No hay mantenimientos programados para mostrar." Foreground="#C0392B" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Visibility="{Binding Semanas.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=False}" Grid.Row="2"/>
                
                <!-- Leyenda de colores compacta debajo -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0" VerticalAlignment="Top">
                    <!-- Pendiente -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <Border Width="14" Height="14" CornerRadius="2" Background="#90CAF9" BorderBrush="#64B5F6" BorderThickness="1"/>
                        <TextBlock Text="Pendiente" FontSize="9" Foreground="#666" VerticalAlignment="Center" Margin="3,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Ejecutado -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <Border Width="14" Height="14" CornerRadius="2" Background="#388E3C" BorderBrush="#2D6A2A" BorderThickness="1"/>
                        <TextBlock Text="Ejecutado" FontSize="9" Foreground="#666" VerticalAlignment="Center" Margin="3,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Retrasado -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <Border Width="14" Height="14" CornerRadius="2" Background="#FFB300" BorderBrush="#F59F00" BorderThickness="1"/>
                        <TextBlock Text="Retrasado" FontSize="9" Foreground="#666" VerticalAlignment="Center" Margin="3,0,0,0"/>
                    </StackPanel>
                    
                    <!-- No Realizado -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <Border Width="14" Height="14" CornerRadius="2" Background="#C80000" BorderBrush="#A00000" BorderThickness="1"/>
                        <TextBlock Text="No Realizado" FontSize="9" Foreground="#666" VerticalAlignment="Center" Margin="3,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Sin Mantenimientos -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="14" Height="14" CornerRadius="2" Background="Transparent" BorderBrush="#BFBFBF" BorderThickness="1">
                            <Rectangle Stroke="#BFBFBF" StrokeThickness="0.5" StrokeDashArray="1.5 1.5" RadiusX="1" RadiusY="1"/>
                        </Border>
                        <TextBlock Text="Sin Mtto" FontSize="9" Foreground="#666" VerticalAlignment="Center" Margin="3,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Overlay en nivel superior para cubrir encabezado + semanas (dimmer suave) -->
        <Grid x:Name="LoadingOverlay"
              Grid.Row="0"
              Grid.RowSpan="2"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Background="#40000000"
              Panel.ZIndex="999"
              IsHitTestVisible="True"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Border Width="420" Height="140" CornerRadius="10" Background="#FFFFFF" Opacity="0.98" Padding="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Barra indeterminada mÃ¡s ancha para mejor visibilidad -->
                    <ProgressBar IsIndeterminate="True" Width="200" Height="18" Margin="0,0,18,0" />

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Cargando..." FontSize="18" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBlock Text="Por favor espere" FontSize="12" Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
