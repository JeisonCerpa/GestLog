                    <DataGridTextColumn Header="S47" Binding="{Binding S47}" MinWidth="60"/>
                    <DataGridTextColumn Header="S48" Binding="{Binding S48}" MinWidth="60"/>
                    <DataGridTextColumn Header="S49" Binding="{Binding S49}" MinWidth="60"/>
