<UserControl x:Class="Views.Tools.GestionIdentidadCatalogos.Usuario.UsuarioFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Formulario de Usuario" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Text="{Binding Usuario.NombreUsuario, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Usuario.Correo, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
            <PasswordBox Password="{Binding Usuario.Contrasena, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
            <Button Content="Guardar" Command="{Binding GuardarUsuarioCommand}" Margin="0,10,0,0"/>
            <Button Content="Cancelar" Command="{Binding CancelarCommand}" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
