<UserControl x:Class="GestLog.Views.Tools.GestionIdentidadCatalogos.Catalogo.Permisos.GestionPermisosRolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:GestLog.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- Convertidores -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:CountActivePermissionsConverter x:Key="CountActivePermissionsConverter"/>
        
        <!-- Estilo para Toggle Switch -->
        <Style x:Key="ModernToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchBorder" 
                                    Width="50" Height="26" 
                                    CornerRadius="13"
                                    Background="#E0E0E0"
                                    BorderThickness="1"
                                    BorderBrush="#CCCCCC">
                                <Ellipse x:Name="SwitchThumb" 
                                         Width="20" Height="20" 
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="3,0,0,0"
                                         Stroke="#CCCCCC"
                                         StrokeThickness="1">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="SwitchBorder"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#4CAF50" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="24" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="SwitchBorder"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#E0E0E0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SwitchBorder" Property="BorderBrush" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones principales -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para tarjetas de módulos -->
        <Style x:Key="ModuleCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FAFAFA">
        <Border Background="White" CornerRadius="8" Padding="32" Margin="40"
                Effect="{DynamicResource DropShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,24">
                    <TextBlock Text="🔐" FontSize="40" Margin="0,0,16,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Gestión de Permisos por Rol" FontFamily="Segoe UI" FontSize="28" FontWeight="Bold" Foreground="#504F4E"/>
                        <TextBlock Text="Asigna permisos a los roles del sistema" FontFamily="Segoe UI" FontSize="16" Foreground="#706F6F"/>
                    </StackPanel>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Listado de roles -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Stretch">
                        <TextBlock Text="Roles" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="340">
                            <ItemsControl ItemsSource="{Binding Roles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F7F7F7" CornerRadius="6" Padding="10" Margin="0,0,0,8" BorderBrush="#E0E0E0" BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="🛡️" FontSize="20" Margin="0,0,8,0"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="15"/>
                                                    <TextBlock Text="{Binding Descripcion}" FontSize="12" Foreground="#888"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                                                    <Button Command="{Binding DataContext.AbrirVerRolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" ToolTip="Ver" Width="28" Height="28" Background="#1976D2" Foreground="White" BorderThickness="0" Margin="0,0,4,0">
                                                        <TextBlock Text="👁️" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Button>
                                                    <Button Command="{Binding DataContext.AbrirEditarRolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" ToolTip="Editar" Width="28" Height="28" Background="#2B8E3F" Foreground="White" BorderThickness="0" Margin="0,0,4,0">
                                                        <TextBlock Text="✏️" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Button>
                                                    <Button Command="{Binding DataContext.EliminarRolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" ToolTip="Eliminar" Width="28" Height="28" Background="#C0392B" Foreground="White" BorderThickness="0">
                                                        <TextBlock Text="🗑️" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                    <!-- Espaciador -->
                    <Grid Grid.Column="1"/>
                    <!-- Área de permisos y mensaje de estado -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Stretch">
                        <TextBlock Text="{Binding MensajeEstado}" Foreground="#C0392B" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12" Visibility="{Binding MensajeEstado, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <!-- Aquí va el área de asignación de permisos existente -->
                        <!-- Mensaje de estado -->
                        <TextBlock Text="{Binding MensajeEstado}"
                                   FontSize="14"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"
                                   Foreground="#666666"/>

                        <!-- Indicador de carga -->
                        <ProgressBar IsIndeterminate="{Binding IsLoading}"
                                     Height="4"
                                     Margin="0,0,0,20"
                                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Lista de módulos -->
                        <ItemsControl ItemsSource="{Binding ModulosPermisos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ModuleCardStyle}">
                                        <StackPanel>
                                            <!-- Header del módulo -->
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="📦" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding NombreModulo}" FontSize="18" FontWeight="Bold" Foreground="#333333" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" Text="{Binding Permisos.Count, StringFormat={}{0} permisos}" FontSize="12" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                                <ToggleButton Grid.Column="2" Style="{StaticResource ModernToggleButton}" IsChecked="{Binding TodosAsignados, Mode=TwoWay}" ToolTip="Activar/Desactivar todos los permisos del módulo">
                                                    <ToggleButton.Resources>
                                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource ModernToggleButton}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TodosAsignados}" Value="{x:Null}">
                                                                    <Setter Property="Background" Value="#FFD700"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ToggleButton.Resources>
                                                </ToggleButton>
                                            </Grid>
                                            <!-- Lista de permisos del módulo -->
                                            <ItemsControl ItemsSource="{Binding Permisos}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#FAFAFA" BorderBrush="#E8E8E8" BorderThickness="1" CornerRadius="6" Margin="0,2,0,0" Padding="12,8">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Permiso.Nombre}" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                                                                    <TextBlock Text="{Binding Permiso.Descripcion}" FontSize="12" Foreground="#666666" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                                <ToggleButton Grid.Column="1" Style="{StaticResource ModernToggleButton}" IsChecked="{Binding EstaAsignado, Mode=TwoWay}" ToolTip="Activar/Desactivar este permiso"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Mensaje cuando no hay rol seleccionado -->
                        <Border Background="White" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="40"
                                Visibility="{Binding RolSeleccionado, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="🔍" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Selecciona un rol para gestionar sus permisos" 
                                           FontSize="18" 
                                           HorizontalAlignment="Center"
                                           Foreground="#666666"/>
                                <TextBlock Text="Utiliza el selector de rol en la parte superior para comenzar" 
                                           FontSize="14" 
                                           HorizontalAlignment="Center"
                                           Foreground="#999999"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer con información -->
        <Border Grid.Row="3" 
                Background="#F0F0F0" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" 
                Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="💡 Tip: Usa los switches de cada módulo para activar/desactivar todos los permisos de ese módulo de una vez"
                           FontSize="12" 
                           Foreground="#666666"
                           VerticalAlignment="Center"/>                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Total permisos activos: " FontSize="12" Foreground="#666666"/>
                    <TextBlock Text="{Binding ModulosPermisos, Converter={StaticResource CountActivePermissionsConverter}}"
                               FontSize="12" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MODAL SOLO LECTURA: VER DETALLES DE ROL -->
        <Grid x:Name="ModalVerRol" Visibility="{Binding IsModalVerRolVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Background="#80000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Panel.ZIndex="99">
            <Border Background="White" CornerRadius="12" Padding="32" Width="480" HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{DynamicResource DropShadowEffect}">
                <StackPanel>
                    <TextBlock Text="Detalles del Rol" FontSize="22" FontWeight="Bold" Foreground="#504F4E" Margin="0,0,0,18"/>
                    <TextBlock Text="Nombre" FontWeight="SemiBold" FontSize="14" Foreground="#888"/>
                    <TextBlock Text="{Binding RolVerDetalle.Nombre}" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBlock Text="Descripción" FontWeight="SemiBold" FontSize="14" Foreground="#888"/>
                    <TextBlock Text="{Binding RolVerDetalle.Descripcion}" FontSize="15" TextWrapping="Wrap" Margin="0,0,0,16"/>
                    <TextBlock Text="Permisos asignados" FontWeight="SemiBold" FontSize="15" Foreground="#504F4E" Margin="0,0,0,8"/>
                    <ScrollViewer Height="180" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ModulosPermisosVer}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding NombreModulo}" FontWeight="Bold" Foreground="#2B8E3F" FontSize="15" Margin="0,0,0,4"/>
                                        <ItemsControl ItemsSource="{Binding Permisos}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="• {Binding Permiso.Nombre}" FontSize="14" Margin="12,0,0,0"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                        <Button Content="Cerrar" Command="{Binding CerrarVerRolCommand}" Background="#706F6F" Foreground="White" Padding="10,4" MinWidth="80"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
