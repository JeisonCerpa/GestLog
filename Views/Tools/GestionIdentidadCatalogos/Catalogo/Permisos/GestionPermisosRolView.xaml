<UserControl x:Class="GestLog.Views.Tools.GestionIdentidadCatalogos.Catalogo.Permisos.GestionPermisosRolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <UserControl.Resources>
        <Style x:Key="CardRoleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F7F7F7"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <StackPanel Margin="6,4">
                                <TextBlock x:Name="TitleText" Text="{Binding Nombre}" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="DescText" Text="{Binding Descripcion}" FontSize="12" Foreground="#706F6F" HorizontalAlignment="Center" Margin="0,4,0,0" TextWrapping="Wrap" MaxHeight="36"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#D6F5E3"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#118938"/>
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#118938"/>
                                <Setter TargetName="TitleText" Property="Foreground" Value="White"/>
                                <Setter TargetName="DescText" Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PermisoToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchTrack"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="14"
                                    Height="28" Width="56"/>
                            <Border x:Name="SwitchThumb"
                                    Background="White"
                                    Width="24" Height="24"
                                    CornerRadius="12"
                                    Margin="2,2,0,2"
                                    HorizontalAlignment="Left"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.15"/>
                                </Border.Effect>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Right" Margin="64,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchTrack" Property="Background" Value="#118938"/>
                                <Setter TargetName="SwitchTrack" Property="BorderBrush" Value="#118938"/>
                                <Setter TargetName="SwitchThumb" Property="Background" Value="White"/>
                                <Setter TargetName="SwitchThumb" Property="Margin" Value="30,2,2,2"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="SwitchTrack" Property="Background" Value="#E0E0E0"/>
                                <Setter TargetName="SwitchTrack" Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter TargetName="SwitchThumb" Property="Background" Value="White"/>
                                <Setter TargetName="SwitchThumb" Property="Margin" Value="2,2,0,2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="SwitchTrack" Property="Background" Value="#CCCCCC"/>
                                <Setter TargetName="SwitchThumb" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="#FAFAFA" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Panel de roles -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="16" Margin="0,0,16,0" BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Roles" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                <ItemsControl ItemsSource="{Binding Roles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource CardRoleButtonStyle}"
                                    Command="{Binding DataContext.SeleccionarRolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <StackPanel Margin="6,4">
                                    <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Descripcion}" FontSize="12" Foreground="#706F6F" HorizontalAlignment="Center" Margin="0,4,0,0" TextWrapping="Wrap" MaxHeight="36"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
        <!-- Panel de permisos -->
        <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Permisos por mÃ³dulo" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Height="480">
                    <ItemsControl ItemsSource="{Binding ModulosPermisos}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" CornerRadius="6" Margin="0,0,0,12" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="{Binding NombreModulo}" FontWeight="Bold" FontSize="15"/>
                                        <ItemsControl ItemsSource="{Binding Permisos}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,2,0,2">
                                                        <ToggleButton Style="{StaticResource PermisoToggleSwitchStyle}"
                                                                      IsChecked="{Binding EstaAsignado, Mode=TwoWay}"/>
                                                        <TextBlock Text="{Binding Permiso.Nombre}" FontSize="14" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <TextBlock Grid.Row="2" Text="{Binding MensajeEstado}" Foreground="DarkGreen" FontWeight="SemiBold" Margin="0" Padding="0" Height="22" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
