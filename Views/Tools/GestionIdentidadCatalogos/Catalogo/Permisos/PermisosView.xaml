<UserControl x:Class="GestLog.Views.Tools.GestionIdentidadCatalogos.Catalogo.Permisos.PermisosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="GestiÃ³n de Permisos" FontWeight="Bold" FontSize="28" Foreground="#504F4E" Margin="0,0,0,18"/>
            <Button Content="+ Nuevo Permiso" Command="{Binding RegistrarPermisoCommand}" Height="44" Width="180"
                    Background="#118938" Foreground="White" FontWeight="SemiBold" FontSize="16"
                    BorderThickness="0" Margin="0,0,0,18" HorizontalAlignment="Left">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#118938"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#2B8E3F"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Padding" Value="12,4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2B8E3F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="340" Margin="0,0,0,0">
                <ItemsControl ItemsSource="{Binding Permisos}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,12"
                                    Effect="{DynamicResource DropShadowEffect}" MinWidth="320" MaxWidth="600">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸ”’" FontSize="28" VerticalAlignment="Top" Grid.Column="0" Margin="0,0,12,0"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Nombre}" FontFamily="Segoe UI" FontSize="18" FontWeight="SemiBold" Foreground="#504F4E"/>
                                        <TextBlock Text="{Binding Descripcion}" FontFamily="Segoe UI" FontSize="13" Foreground="#706F6F" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Modulo}" FontFamily="Segoe UI" FontSize="13" Foreground="#2B8E3F" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                                        <Button Content="Editar" Command="{Binding DataContext.EditarPermisoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"
                                                Background="#2B8E3F" Foreground="White" BorderThickness="0" FontWeight="SemiBold" FontSize="13" Padding="8,2" Margin="0,0,6,0" MinWidth="70">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#2B8E3F"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#118938"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="Padding" Value="8,2"/>
                                                    <Setter Property="MinWidth" Value="70"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#118938"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Content="Eliminar" Command="{Binding DataContext.DesactivarPermisoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"
                                                Background="#C0392B" Foreground="White" BorderThickness="0" FontWeight="SemiBold" FontSize="13" Padding="8,2" MinWidth="70">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#C0392B"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#A93226"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="Padding" Value="8,2"/>
                                                    <Setter Property="MinWidth" Value="70"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#A93226"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <TextBlock Text="{Binding MensajeEstado}" Foreground="#C0392B" FontWeight="SemiBold" FontSize="14" Margin="0,18,0,0"
                       Visibility="{Binding MensajeEstado, Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
