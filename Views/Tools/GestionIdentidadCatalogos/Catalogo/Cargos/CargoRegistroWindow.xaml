<Window x:Class="GestLog.Views.Usuarios.CargoRegistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Cargo" Height="320" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#FAFAFA">
    <Border Background="White" CornerRadius="10" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Registrar nuevo cargo" FontSize="20" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,18"/>
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Nombre" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="260" Height="32" Background="#F5F5F5" BorderBrush="#BDBDBD" BorderThickness="1" FontSize="15"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="DescripciÃ³n" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="260" Height="32" Background="#F5F5F5" BorderBrush="#BDBDBD" BorderThickness="1" FontSize="15"/>
            </StackPanel>
            <TextBlock Text="{Binding MensajeError}" Foreground="#D32F2F" FontWeight="SemiBold" Margin="0,6,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                <Button Content="Registrar" Command="{Binding RegistrarCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="110" Height="32" Margin="0,0,10,0"/>
                <Button Content="Cancelar" Command="{Binding CancelarCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="90" Height="32"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
