<UserControl x:Class="GestLog.Views.Tools.GestionCartera.GestionCarteraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GestLog.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">      <UserControl.Resources>
        <converters:PathToFileNameConverter x:Key="PathToFileNameConverter"/>
        <converters:FileSizeConverter x:Key="FileSizeConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <converters:BooleanToStatusTextConverter x:Key="BooleanToStatusTextConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
    </UserControl.Resources>
    <Grid Background="White">
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top" Background="#2C3E50" Padding="20">
                <StackPanel>
                    <TextBlock Text="💼 Gestión de Cartera" 
                              FontSize="24" FontWeight="SemiBold" 
                              Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sistema de generación y envío de estados de cuenta" 
                              FontSize="14" Foreground="#BDC3C7" 
                              HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <TabControl x:Name="mainTabControl" Background="White" BorderThickness="0">
                <!-- Tab: Generación de Documentos -->
                <TabItem Header="📄 Generación de Documentos" FontSize="14" Padding="15,8">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>

                        <!-- Configuration Panel -->
                        <Border Grid.Row="0" Background="#F8F9FA" Padding="20" CornerRadius="5" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Archivo Excel -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="📄 Archivo Excel:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"/>
                                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                                    <Button Content="Seleccionar Excel" 
                                           Background="#3498DB" Foreground="White"
                                           Padding="10,5" BorderThickness="0" FontWeight="SemiBold"
                                           Command="{Binding SelectExcelFileCommand}"/>
                                    <TextBlock Text="{Binding SelectedExcelFilePath, TargetNullValue='Ningún archivo seleccionado'}" 
                                              VerticalAlignment="Center" Margin="10,0,0,0"
                                              Foreground="#7F8C8D" FontStyle="Italic"/>
                                </StackPanel>

                                <!-- Carpeta de Destino -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="📁 Carpeta de Destino:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"/>
                                <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
                                    <Button Content="Seleccionar Carpeta" 
                                           Background="#9B59B6" Foreground="White"
                                           Padding="10,5" BorderThickness="0" FontWeight="SemiBold"
                                           Command="{Binding SelectOutputFolderCommand}"/>
                                    <Button Content="📂" ToolTip="Abrir carpeta"
                                           Background="#95A5A6" Foreground="White"
                                           Padding="8,5" BorderThickness="0" FontWeight="SemiBold"
                                           Margin="5,0,0,0"
                                           Command="{Binding OpenOutputFolderCommand}"/>
                                </StackPanel>                                <TextBlock Grid.Row="4" Grid.Column="2" 
                                          Text="{Binding OutputFolderPath, TargetNullValue='Carpeta por defecto'}"
                                          Foreground="#7F8C8D" FontStyle="Italic" TextTrimming="CharacterEllipsis"/>                            </Grid>
                        </Border>
                        
                        <!-- Panel de Plantilla -->
                        <Border Grid.Row="0" Background="#F8F9FA" Padding="20" CornerRadius="5" Margin="0,140,0,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="🎨 Plantilla de Fondo:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50"
                                          Margin="0,0,0,10"/>
                                          
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <Button Content="Personalizar Plantilla" 
                                               Background="#E67E22" Foreground="White"
                                               Padding="10,5" BorderThickness="0" FontWeight="SemiBold"
                                               Command="{Binding SelectTemplateFileCommand}"
                                               HorizontalAlignment="Left"/>
                                               
                                        <Button Content="No usar plantilla" ToolTip="Desactivar uso de plantilla"
                                               Background="#E74C3C" Foreground="White"
                                               Padding="10,5" BorderThickness="0" FontWeight="SemiBold"
                                               Margin="0,5,0,0" HorizontalAlignment="Left"
                                               Command="{Binding ClearTemplateCommand}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Orientation="Vertical">
                                        <CheckBox IsChecked="{Binding UseDefaultTemplate}" 
                                                  Content="Usar plantilla predeterminada" Margin="0,5,0,0"
                                                  Foreground="#7F8C8D"/>
                                        <TextBlock Text="{Binding TemplateStatusMessage}" 
                                                   Foreground="#7F8C8D" Margin="0,5,0,0" 
                                                   FontStyle="Italic" TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>                        <!-- Progress Panel -->
                        <Border Grid.Row="1" Background="#ECF0F1" Padding="20" CornerRadius="5" Margin="0,80,0,20">
                            <StackPanel>
                                <DockPanel Margin="0,0,0,10">
                                    <TextBlock Text="📊 Estado del Proceso:" FontWeight="SemiBold" 
                                              Foreground="#2C3E50" DockPanel.Dock="Left"/>
                                    <TextBlock Text="{Binding StatusMessage}" 
                                              Foreground="#34495E" HorizontalAlignment="Right"/>
                                </DockPanel>
                                
                                <ProgressBar Value="{Binding ProgressValue}" 
                                           Height="20" Background="#BDC3C7" 
                                           Foreground="#27AE60" BorderThickness="0"/>
                                
                                <DockPanel Margin="0,5,0,0">
                                    <TextBlock Text="{Binding CurrentDocument, StringFormat='Procesando: {0}'}" 
                                              Foreground="#7F8C8D" DockPanel.Dock="Left"/>
                                    <TextBlock Text="{Binding TotalDocuments, StringFormat='de {0} empresas'}" 
                                              Foreground="#7F8C8D" HorizontalAlignment="Right"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Button Content="🚀 Generar Estados de Cuenta" 
                                   Background="#27AE60" Foreground="White"
                                   Padding="20,10" BorderThickness="0" FontWeight="SemiBold"
                                   FontSize="14" Margin="5"
                                   Command="{Binding GenerateDocumentsCommand}"/>
                                   
                            <Button Content="🔄 Reiniciar" 
                                   Background="#95A5A6" Foreground="White"
                                   Padding="15,10" BorderThickness="0" FontWeight="SemiBold"
                                   FontSize="14" Margin="5"
                                   Command="{Binding ResetProgressCommand}"
                                   ToolTip="Reiniciar progreso y estado"/>
                                   
                            <Button Content="🔍 Información" 
                                   Background="#34495E" Foreground="White"
                                   Padding="15,10" BorderThickness="0" FontWeight="SemiBold"
                                   FontSize="14" Margin="5"
                                   Command="{Binding ShowDebugInfoCommand}"/>
                        </StackPanel><!-- Modern Progress Panel -->
                        <Border Grid.Row="3" Background="#2C3E50" CornerRadius="5" 
                               Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,15,20,10">
                                    <TextBlock Text="🔄" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Generando Estados de Cuenta..." 
                                              FontSize="16" FontWeight="SemiBold" 
                                              Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ProgressValue, StringFormat='{}{0:F0}%'}" 
                                              FontSize="14" FontWeight="Bold" 
                                              Foreground="#1ABC9C" 
                                              HorizontalAlignment="Right" 
                                              VerticalAlignment="Center" 
                                              Margin="10,0,0,0"/>
                                </StackPanel>                                <!-- Progress Bar -->
                                <Border Grid.Row="1" Background="#34495E" CornerRadius="10" 
                                       Height="25" Margin="20,0,20,10">
                                    <Grid>
                                        <!-- Background gradient -->
                                        <Border Background="#2C3E50" CornerRadius="10"/>
                                        
                                        <!-- Main progress bar -->
                                        <ProgressBar Value="{Binding ProgressValue}" 
                                                    Maximum="100" 
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Height="25">
                                            <ProgressBar.Foreground>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#3498DB" Offset="0"/>
                                                    <GradientStop Color="#2ECC71" Offset="0.5"/>
                                                    <GradientStop Color="#1ABC9C" Offset="1"/>
                                                </LinearGradientBrush>
                                            </ProgressBar.Foreground>
                                        </ProgressBar>
                                        
                                        <!-- Animated shimmer effect -->
                                        <Rectangle Fill="#40FFFFFF" Opacity="0.2" 
                                                  Width="100" Height="25" 
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center">
                                            <Rectangle.RenderTransform>
                                                <TranslateTransform x:Name="ShimmerTransform"/>
                                            </Rectangle.RenderTransform>
                                            <Rectangle.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation 
                                                                Storyboard.TargetName="ShimmerTransform"
                                                                Storyboard.TargetProperty="X"
                                                                From="-100" To="300" 
                                                                Duration="0:0:2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Rectangle.Triggers>
                                        </Rectangle>
                                    </Grid>
                                </Border>

                                <!-- Current Document Info -->
                                <StackPanel Grid.Row="2" Margin="20,0,20,10">
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                            <TextBlock Text="📄" Foreground="#3498DB" Margin="0,0,8,0"/>
                                            <TextBlock Text="Documento actual:" 
                                                      Foreground="#BDC3C7" 
                                                      FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                            <TextBlock Text="{Binding CurrentDocument}" 
                                                      Foreground="#F39C12" 
                                                      FontWeight="SemiBold"
                                                      FontSize="12"/>
                                            <TextBlock Text=" de " 
                                                      Foreground="#BDC3C7" 
                                                      FontSize="12"/>
                                            <TextBlock Text="{Binding TotalDocuments}" 
                                                      Foreground="#F39C12" 
                                                      FontWeight="SemiBold"
                                                      FontSize="12"/>
                                        </StackPanel>
                                    </DockPanel>
                                    
                                    <!-- Document name display -->
                                    <TextBlock Text="{Binding StatusMessage}" 
                                              Foreground="#ECF0F1" 
                                              FontSize="13" 
                                              FontWeight="Medium"
                                              Margin="26,5,0,0"
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" 
                                           HorizontalAlignment="Center" 
                                           Margin="20,10,20,15">
                                    <Button Content="⏸️ Pausar" 
                                           Background="#E67E22" Foreground="White"
                                           Padding="12,6" BorderThickness="0" 
                                           FontWeight="SemiBold" FontSize="12"
                                           Margin="5,0"
                                           Visibility="Collapsed"/>
                                    
                                    <Button Content="⏹️ Cancelar" 
                                           Background="#E74C3C" Foreground="White"
                                           Padding="12,6" BorderThickness="0" 
                                           FontWeight="SemiBold" FontSize="12"
                                           Margin="5,0"
                                           Command="{Binding CancelGenerationCommand}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#E74C3C"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C0392B"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Completion Summary Panel -->
                        <Border Grid.Row="3" Background="#27AE60" CornerRadius="5" 
                               Visibility="{Binding IsProcessingCompleted, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Margin="20,15">
                                <TextBlock Text="✅" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="¡Generación Completada!" 
                                              FontSize="16" FontWeight="Bold" 
                                              Foreground="White"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding GeneratedDocuments.Count, StringFormat='Se generaron {0} documentos'}" 
                                                  Foreground="#E8F5E8" FontSize="12"/>
                                        <TextBlock Text=" en " Foreground="#E8F5E8" FontSize="12"/>
                                        <TextBlock Text="{Binding OutputFolderPath, Converter={StaticResource PathToFileNameConverter}}" 
                                                  Foreground="#E8F5E8" FontSize="12" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                                  <Button Content="📂 Abrir Carpeta" 
                                       Background="#229954" Foreground="White"
                                       Padding="10,5" BorderThickness="0" 
                                       FontWeight="SemiBold" FontSize="11"
                                       Margin="15,0,0,0"
                                       Command="{Binding OpenOutputFolderCommand}"
                                       VerticalAlignment="Center">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#229954"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1E8449"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Tab: Resultados -->
                <TabItem Header="📊 Resultados" FontSize="14" Padding="15,8">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Summary -->
                        <Border Grid.Row="0" Background="#D5DBDB" Padding="20" CornerRadius="5" Margin="0,0,0,20">
                            <DockPanel>
                                <TextBlock Text="📈 Resumen de Generación" 
                                          FontSize="16" FontWeight="SemiBold" 
                                          Foreground="#2C3E50" DockPanel.Dock="Top"
                                          Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding GeneratedDocuments.Count, StringFormat='Documentos generados: {0}'}" 
                                              FontWeight="SemiBold" Foreground="#27AE60" Margin="0,0,20,0"/>
                                    <TextBlock Text="📁 Ubicación: " Foreground="#7F8C8D"/>
                                    <TextBlock Text="{Binding OutputFolderPath}" Foreground="#34495E"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <!-- Generated Documents List -->
                        <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="5">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="📄 Documentos Generados:" 
                                          FontWeight="SemiBold" Foreground="#2C3E50" 
                                          Padding="15,15,15,10"/>
                                <DataGrid ItemsSource="{Binding GeneratedDocuments}" 
                                         AutoGenerateColumns="False" 
                                         IsReadOnly="True"
                                         Background="White"
                                         RowBackground="White"
                                         AlternatingRowBackground="#F8F9FA"
                                         GridLinesVisibility="Horizontal"
                                         HeadersVisibility="Column"
                                         Margin="15,0,15,15">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Empresa" Binding="{Binding CompanyName}" Width="*"/>                                        <DataGridTextColumn Header="Archivo" Binding="{Binding FilePath, Converter={StaticResource PathToFileNameConverter}}" Width="200"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding GeneratedDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="120"/>
                                        <DataGridTextColumn Header="Tamaño" Binding="{Binding FileSize, Converter={StaticResource FileSizeConverter}}" Width="80"/>
                                        <DataGridTextColumn Header="Registros" Binding="{Binding RecordCount}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </Grid>
                </TabItem>                <!-- Tab: Envío de Correos -->
                <TabItem Header="📧 Envío de Correos" FontSize="14" Padding="15,8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions><!-- Estado y Configuración SMTP -->
                            <Border Grid.Row="0" Background="#F8F9FA" Padding="20" CornerRadius="5" Margin="0,0,0,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Información de Estado -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="⚙️ Configuración del Servidor SMTP" 
                                                  FontSize="16" FontWeight="SemiBold" 
                                                  Foreground="#2C3E50" Margin="0,0,0,10"/>
                                        
                                        <!-- Estado actual -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <Ellipse Width="12" Height="12" Margin="0,0,8,0" VerticalAlignment="Center">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="{Binding IsEmailConfigured, Converter={StaticResource BooleanToColorConverter}}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock Text="{Binding IsEmailConfigured, Converter={StaticResource BooleanToStatusTextConverter}}" 
                                                      FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </StackPanel>                                        <!-- Información básica -->
                                        <Grid Margin="0,0,0,10" 
                                             Visibility="{Binding IsEmailConfigured, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Usuario/Email -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="📧 Usuario:" 
                                                      FontWeight="SemiBold" FontSize="11" Margin="0,0,10,2"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SmtpUsername}" 
                                                      FontSize="11" Foreground="#2C3E50"/>
                                            
                                            <!-- Servidor -->
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="🌐 Servidor:" 
                                                      FontWeight="SemiBold" FontSize="11" Margin="0,0,10,2"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" FontSize="11" Foreground="#2C3E50">
                                                <Run Text="{Binding SmtpServer}"/>
                                                <Run Text=":" Foreground="#7F8C8D"/>
                                                <Run Text="{Binding SmtpPort}" FontWeight="SemiBold"/>
                                                <Run Text=" (SSL: " Foreground="#7F8C8D"/>
                                                <Run Text="{Binding EnableSsl}" FontWeight="SemiBold"/>
                                                <Run Text=")" Foreground="#7F8C8D"/>
                                            </TextBlock>
                                            
                                            <!-- Estado de credenciales -->
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="🔐 Credenciales:" 
                                                      FontWeight="SemiBold" FontSize="11" Margin="0,0,10,2"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Guardadas de forma segura" 
                                                      FontSize="11" Foreground="#27AE60" FontStyle="Italic"/>
                                        </Grid>

                                        <TextBlock Text="Configure el servidor SMTP para habilitar el envío de correos electrónicos"
                                                  FontSize="11" Foreground="#7F8C8D"
                                                  Visibility="{Binding IsEmailConfigured, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=Visibility}"/>
                                    </StackPanel>                                    <!-- Botones de Configuración -->
                                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                                        <!-- Botón Principal de Configuración -->                                        <Button Content="⚙️ Configurar SMTP" 
                                               Background="#E67E22" Foreground="White"
                                               Padding="25,15" BorderThickness="0" FontWeight="Bold"
                                               FontSize="16"
                                               Click="ConfigureSmtp_Click"
                                               VerticalAlignment="Center"
                                               ToolTip="Abrir ventana de configuración avanzada del servidor SMTP"
                                               Cursor="Hand"
                                               Margin="0,0,0,10">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#E67E22"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#D35400"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Botón de Test Rápido -->                                        <Button Content="🧪 Probar Conexión" 
                                               Background="#3498DB" Foreground="White"
                                               Padding="15,8" BorderThickness="0" FontWeight="SemiBold"
                                               FontSize="12"
                                               Command="{Binding SendTestEmailCommand}"
                                               IsEnabled="{Binding IsEmailConfigured}"
                                               ToolTip="Enviar un correo de prueba rápido"
                                               Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#3498DB"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2980B9"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Background" Value="#BDC3C7"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>                            <!-- Información del Correo -->
                            <Border Grid.Row="2" Background="#F8F9FA" Padding="20" CornerRadius="5" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="✉️ Información del Correo" 
                                              FontSize="16" FontWeight="SemiBold" 
                                              Foreground="#2C3E50" Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Destinatarios -->
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Text="Destinatarios (Para):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding EmailRecipients, UpdateSourceTrigger=PropertyChanged}" 
                                                    Padding="8" BorderBrush="#BDC3C7"
                                                    ToolTip="Separar múltiples direcciones con punto y coma (;)"/>
                                        </StackPanel>

                                        <!-- Asunto -->
                                        <StackPanel Grid.Row="0" Grid.Column="2">
                                            <TextBlock Text="Asunto:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding EmailSubject, UpdateSourceTrigger=PropertyChanged}" 
                                                    Padding="8" BorderBrush="#BDC3C7"/>
                                        </StackPanel>

                                        <!-- CC -->
                                        <StackPanel Grid.Row="2" Grid.Column="0">
                                            <TextBlock Text="Copia (CC):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding EmailCc, UpdateSourceTrigger=PropertyChanged}" 
                                                    Padding="8" BorderBrush="#BDC3C7"
                                                    ToolTip="Separar múltiples direcciones con punto y coma (;)"/>
                                        </StackPanel>

                                        <!-- BCC -->
                                        <StackPanel Grid.Row="2" Grid.Column="2">
                                            <TextBlock Text="Copia Oculta (BCC):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding EmailBcc, UpdateSourceTrigger=PropertyChanged}" 
                                                    Padding="8" BorderBrush="#BDC3C7"
                                                    ToolTip="Separar múltiples direcciones con punto y coma (;)"/>
                                        </StackPanel>

                                        <!-- Cuerpo del mensaje -->
                                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
                                            <TextBlock Text="Mensaje:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding EmailBody, UpdateSourceTrigger=PropertyChanged}" 
                                                    TextWrapping="Wrap" AcceptsReturn="True"
                                                    Height="100" Padding="8" BorderBrush="#BDC3C7"
                                                    VerticalScrollBarVisibility="Auto"/>
                                        </StackPanel>

                                        <!-- Opciones -->
                                        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding UseHtmlEmail}" 
                                                     Content="Usar formato HTML" 
                                                     FontWeight="SemiBold" Margin="0,0,20,0"
                                                     ToolTip="Activar para enviar correos con formato profesional"/>
                                        </StackPanel>

                                        <!-- Botones de envío -->
                                        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" 
                                                   Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="🔍 Enviar Prueba" 
                                                   Background="#F39C12" Foreground="White"
                                                   Padding="15,8" BorderThickness="0" FontWeight="SemiBold"
                                                   Margin="0,0,10,0"
                                                   Command="{Binding SendTestEmailCommand}"
                                                   IsEnabled="{Binding IsSendingEmail, Converter={StaticResource InverseBooleanConverter}}"
                                                   ToolTip="Enviar un correo de prueba para verificar la configuración"/>
                                            
                                            <Button Content="📧 Enviar Documentos" 
                                                   Background="#27AE60" Foreground="White"
                                                   Padding="15,8" BorderThickness="0" FontWeight="SemiBold"
                                                   Command="{Binding SendDocumentsByEmailCommand}"
                                                   IsEnabled="{Binding IsSendingEmail, Converter={StaticResource InverseBooleanConverter}}"
                                                   ToolTip="Enviar todos los documentos generados por correo electrónico"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>                            <!-- Estado del proceso de envío -->
                            <Border Grid.Row="3" Background="#ECF0F1" Padding="20" CornerRadius="5" Margin="0,0,0,20"
                                   Visibility="{Binding IsSendingEmail, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <DockPanel Margin="0,0,0,10">
                                        <TextBlock Text="📤 Enviando correos..." FontWeight="SemiBold" 
                                                  Foreground="#2C3E50" DockPanel.Dock="Left"/>
                                        <TextBlock Text="{Binding StatusMessage}" 
                                                  Foreground="#34495E" HorizontalAlignment="Right"/>
                                    </DockPanel>
                                    
                                    <ProgressBar IsIndeterminate="True" 
                                               Height="20" Background="#BDC3C7" 
                                               Foreground="#3498DB" BorderThickness="0"/>
                                </StackPanel>
                            </Border>                            <!-- Panel de ayuda -->
                            <Border Grid.Row="4" Background="#E8F6F3" Padding="20" CornerRadius="5" BorderBrush="#52C9A0" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="💡 Consejos para el Envío de Correos" 
                                              FontSize="16" FontWeight="SemiBold" 
                                              Foreground="#1E8449" Margin="0,0,0,15"/>
                                    
                                    <TextBlock TextWrapping="Wrap" Foreground="#1E8449" LineHeight="20">
                                        <Run Text="• "/>
                                        <Run Text="Para Gmail: Usa una contraseña de aplicación en lugar de tu contraseña personal"/>
                                        <LineBreak/>
                                        <Run Text="• "/>
                                        <Run Text="Para Outlook: Servidor smtp-mail.outlook.com, puerto 587"/>
                                        <LineBreak/>
                                        <Run Text="• "/>
                                        <Run Text="Separa múltiples destinatarios con punto y coma (;)"/>
                                        <LineBreak/>
                                        <Run Text="• "/>
                                        <Run Text="Siempre prueba la configuración antes de enviar documentos"/>
                                        <LineBreak/>
                                        <Run Text="• "/>
                                        <Run Text="Los documentos se adjuntarán automáticamente al correo"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
                
                <!-- Tab: Envío Automático -->
                <TabItem Header="🚀 Envío Automático" FontSize="14" Padding="15,8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Título -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="🚀 Envío Automático de Documentos" 
                                          FontSize="16" FontWeight="Bold" 
                                          Foreground="#2E7D32" Margin="0,0,10,0"/>
                                <Border Background="#4CAF50" CornerRadius="12" Padding="8,3">
                                    <TextBlock Text="NUEVO" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <!-- Selección de Excel de correos -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Archivo Excel de correos -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📊 Excel con Correos de Empresas:" 
                                              FontWeight="SemiBold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="📁 Seleccionar Excel" 
                                               Background="#4CAF50" Foreground="White"
                                               Padding="12,8" BorderThickness="0" FontWeight="SemiBold"
                                               Command="{Binding SelectEmailExcelFileCommand}"
                                               ToolTip="Seleccionar archivo Excel que contiene correos de empresas"/>
                                        <Button Content="ℹ️" 
                                               Background="#2196F3" Foreground="White"
                                               Padding="8,8" BorderThickness="0" FontWeight="Bold"
                                               Margin="5,0,0,0"
                                               ToolTip="El Excel debe tener columnas: NIT, Empresa, Correo"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding SelectedEmailExcelFilePath, TargetNullValue='No se ha seleccionado archivo'}" 
                                              Margin="0,8,0,0" Foreground="#666" FontStyle="Italic" 
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Información de empresas -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="📈 Estado del Archivo:" 
                                              FontWeight="SemiBold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                    
                                    <!-- Indicador de archivo válido -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <Ellipse Width="12" Height="12" Margin="0,0,8,0" VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="{Binding HasEmailExcel, Converter={StaticResource BooleanToColorConverter}}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="{Binding HasEmailExcel, Converter={StaticResource BooleanToStatusTextConverter}}" 
                                                  FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Estadísticas del archivo -->
                                    <StackPanel Visibility="{Binding HasEmailExcel, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Foreground="#2E7D32" FontSize="12">
                                            <Run Text="📊 Empresas con correo: "/>
                                            <Run Text="{Binding CompaniesWithEmail}" FontWeight="Bold"/>
                                        </TextBlock>
                                        <TextBlock Text="✅ Listo para envío automático" 
                                                  Foreground="#4CAF50" FontSize="11" FontStyle="Italic" Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="⚠️ Seleccione un archivo Excel válido" 
                                              Foreground="#F44336" FontSize="11" FontStyle="Italic"
                                              Visibility="{Binding HasEmailExcel, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=Visibility}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Descripción del proceso -->
                            <Border Grid.Row="4" Background="#F1F8E9" Padding="15" CornerRadius="5" BorderBrush="#8BC34A" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="🔄 ¿Cómo funciona el Envío Automático?" 
                                              FontWeight="SemiBold" Foreground="#33691E" Margin="0,0,0,8"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="#33691E" LineHeight="18" FontSize="12">
                                        <Run Text="1. "/>
                                        <Run Text="Selecciona un Excel con columnas: NIT, Empresa, Correo"/>
                                        <LineBreak/>
                                        <Run Text="2. "/>
                                        <Run Text="El sistema lee automáticamente los documentos generados"/>
                                        <LineBreak/>
                                        <Run Text="3. "/>
                                        <Run Text="Busca el correo correspondiente a cada empresa por NIT"/>
                                        <LineBreak/>
                                        <Run Text="4. "/>
                                        <Run Text="Envía cada documento al correo correcto automáticamente"/>
                                        <LineBreak/>
                                        <Run Text="5. "/>
                                        <Run Text="Los correos BCC/CC configurados se aplican automáticamente"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>                            <!-- Botón de envío automático -->
                            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="🚀 Enviar Documentos Automáticamente"
                                       Background="#4CAF50" Foreground="White"
                                       Padding="25,12" BorderThickness="0" FontWeight="Bold"
                                       FontSize="14"
                                       Command="{Binding SendDocumentsAutomaticallyCommand}"
                                       IsEnabled="{Binding CanSendAutomatically}"
                                       ToolTip="Envía automáticamente cada documento al correo correspondiente según el Excel">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#45A049"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#CCCCCC"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</UserControl>
