<UserControl x:Class="GestLog.Views.Tools.GestionCartera.GestionCarteraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GestLog.Converters"
             xmlns:controls="clr-namespace:GestLog.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:PathToFileNameConverter x:Key="PathToFileNameConverter"/>
        <converters:FileSizeConverter x:Key="FileSizeConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <converters:BooleanToStatusTextConverter x:Key="BooleanToStatusTextConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
    </UserControl.Resources>
    
    <Grid Background="#FAFAFA">
        <DockPanel>
            <!-- Header con gradiente verde corporativo -->
            <Border DockPanel.Dock="Top" Padding="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#118938" Offset="0"/>
                        <GradientStop Color="#2B8E3F" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="💼 Gestión de Cartera" 
                              FontFamily="Segoe UI"
                              FontSize="28" FontWeight="SemiBold" 
                              Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sistema de generación y envío de estados de cuenta" 
                              FontFamily="Segoe UI"
                              FontSize="16" Foreground="#E8F5E8" 
                              HorizontalAlignment="Center" Margin="0,8,0,0"/>                </StackPanel>
            </Border>
            
            <!-- Main Content con tema corporativo -->
            <TabControl x:Name="mainTabControl" Background="#FAFAFA" BorderThickness="0" Margin="0,10,0,0">
                <TabControl.Resources>
                    <!-- Estilo para TabItem -->
                    <Style TargetType="TabItem">
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="20,12"/>
                        <Setter Property="Foreground" Value="#504F4E"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="#E5E5E5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1,1,1,0" 
                                            Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" 
                                                         HorizontalAlignment="Center" ContentSource="Header" 
                                                         Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#118938"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#E8F5E8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                  <!-- Tab: Generación de Documentos -->
                <TabItem Header="📄 Generación de Documentos">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Panel de Configuración con tema corporativo -->
                        <Border Grid.Row="0" Background="White" Padding="20" CornerRadius="12" Margin="0,0,0,20">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Archivo Excel -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="📄 Archivo Excel:" 
                                          FontFamily="Segoe UI"
                                          FontWeight="SemiBold" FontSize="14" Foreground="#504F4E"/>
                                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                                    <Button Content="Seleccionar Excel" 
                                           Background="#118938" Foreground="White"
                                           FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="13"
                                           Padding="15,8" BorderThickness="0"
                                           Command="{Binding SelectExcelFileCommand}">
                                        <Button.Effect>
                                            <DropShadowEffect Color="#118938" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                        </Button.Effect>
                                    </Button>
                                    <TextBlock Text="{Binding SelectedExcelFilePath, TargetNullValue='Ningún archivo seleccionado'}" 
                                              VerticalAlignment="Center" Margin="15,0,0,0"
                                              FontFamily="Segoe UI" FontSize="12"
                                              Foreground="#706F6F" FontStyle="Italic"/>
                                </StackPanel>

                                <!-- Carpeta de Destino -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="📁 Carpeta de Destino:" 
                                          FontFamily="Segoe UI"
                                          FontWeight="SemiBold" FontSize="14" Foreground="#504F4E"/>
                                <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
                                    <Button Content="Seleccionar Carpeta" 
                                           Background="#2B8E3F" Foreground="White"
                                           FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="13"
                                           Padding="15,8" BorderThickness="0"
                                           Command="{Binding SelectOutputFolderCommand}">
                                        <Button.Effect>
                                            <DropShadowEffect Color="#2B8E3F" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                        </Button.Effect>
                                    </Button>
                                    <Button Content="📂" ToolTip="Abrir carpeta"
                                           Background="#706F6F" Foreground="White"
                                           FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="13"
                                           Padding="10,8" BorderThickness="0"
                                           Margin="8,0,0,0"
                                           Command="{Binding OpenOutputFolderCommand}">
                                        <Button.Effect>
                                            <DropShadowEffect Color="#706F6F" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                        </Button.Effect>
                                    </Button>
                                </StackPanel><TextBlock Grid.Row="4" Grid.Column="2" 
                                          Text="{Binding OutputFolderPath, TargetNullValue='Carpeta por defecto'}"
                                          Foreground="#7F8C8D" FontStyle="Italic" TextTrimming="CharacterEllipsis"/>

                                <!-- Botón de Plantilla pequeño -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,0">
                                    <Button Content="🎨 Plantilla" 
                                           Background="#E67E22" Foreground="White"
                                           Padding="8,4" BorderThickness="0" FontWeight="SemiBold"
                                           FontSize="11"
                                           Command="{Binding SelectTemplateFileCommand}"
                                           ToolTip="Configurar plantilla de fondo para los PDFs"/>
                                    <TextBlock Text="{Binding TemplateStatusMessage}" 
                                               VerticalAlignment="Center" Margin="8,0,0,0"
                                               Foreground="#7F8C8D" FontStyle="Italic" FontSize="10"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>                            </Grid>
                        </Border>
                        
                        <!-- Action Buttons con tema corporativo -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <Button Content="🚀 Generar Estados de Cuenta" 
                                   Background="#118938" Foreground="White"
                                   FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="14"
                                   Padding="20,10" BorderThickness="0" Margin="5"
                                   Command="{Binding GenerateDocumentsCommand}">
                                <Button.Effect>
                                    <DropShadowEffect Color="#118938" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                </Button.Effect>
                            </Button>
                            <Button Content="🔄 Reiniciar" 
                                   Background="#706F6F" Foreground="White"
                                   FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="14"
                                   Padding="15,10" BorderThickness="0" Margin="5"
                                   Command="{Binding ResetProgressCommand}"
                                   ToolTip="Reiniciar progreso y estado">
                                <Button.Effect>
                                    <DropShadowEffect Color="#706F6F" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                </Button.Effect>
                            </Button>                        </StackPanel>

                        <!-- Simple Progress Panel -->
                        <Grid Grid.Row="2" 
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Barra de progreso con tema corporativo -->
                            <controls:SimpleProgressBar Grid.Row="0"
                                                       ProgressValue="{Binding ProgressValue}"
                                                       Title="🔄 Generando Estados de Cuenta"
                                                       StatusMessage="{Binding StatusMessage}"
                                                       BackgroundColor="#118938"
                                                       TitleColor="White"
                                                       PercentageColor="#E8F5E8"
                                                       MessageColor="#C8E6C9"
                                                       BarForeground="#2B8E3F"
                                                       BarBackground="#1B5E20"
                                                       BarHeight="20"/>
                              <!-- Botón de cancelar dentro del panel -->
                            <Button Grid.Row="2"
                                   Content="❌ Cancelar Generación" 
                                   Background="#DC3545" Foreground="White" 
                                   Padding="12,8" BorderThickness="0" 
                                   FontWeight="SemiBold" FontSize="12"
                                   HorizontalAlignment="Center"
                                   Command="{Binding CancelGenerationCommand}"/>
                        </Grid>
                        
                        <!-- Panel de Finalización con tema corporativo -->
                        <Border Grid.Row="2" 
                               Background="#E8F5E8" 
                               BorderBrush="#118938" 
                               BorderThickness="2" 
                               CornerRadius="8" 
                               Padding="15"
                               Margin="0,5,0,0"
                               Visibility="{Binding ShowCompletionPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Título del panel -->
                                <TextBlock Grid.Row="0" 
                                          Text="✅ Generación Completada" 
                                          FontFamily="Segoe UI"
                                          FontSize="18" FontWeight="Bold" 
                                          Foreground="#118938" 
                                          HorizontalAlignment="Center"/>
                                
                                <!-- Mensaje de finalización -->
                                <TextBlock Grid.Row="2" 
                                          Text="{Binding CompletionMessage}" 
                                          FontFamily="Segoe UI"
                                          FontSize="14" 
                                          Foreground="#2B8E3F" 
                                          TextWrapping="Wrap" 
                                          HorizontalAlignment="Center"
                                          TextAlignment="Center"
                                          LineHeight="20"/>                                  <!-- Botones de acción con tema corporativo -->
                                <StackPanel Grid.Row="4" 
                                           Orientation="Horizontal" 
                                           HorizontalAlignment="Center">
                                    <Button Content="🚀 Ir a Envío de Correos" 
                                           Background="#118938" 
                                           Foreground="White"
                                           FontFamily="Segoe UI"
                                           Padding="25,15" 
                                           BorderThickness="0" 
                                           FontWeight="Bold"
                                           FontSize="16" 
                                           Margin="10"
                                           Click="GoToEmailTab_Click"
                                           ToolTip="Navegar a la pestaña de envío automático de correos">
                                        <Button.Effect>
                                            <DropShadowEffect Color="#118938" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                        </Button.Effect>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#118938"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#0F7A30"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="📂 Ver Documentos" 
                                           Background="#706F6F" 
                                           Foreground="White"
                                           FontFamily="Segoe UI"
                                           Padding="20,15" 
                                           BorderThickness="0" 
                                           FontWeight="SemiBold"
                                           FontSize="14" 
                                           Margin="10"
                                           Command="{Binding OpenOutputFolderCommand}"
                                           ToolTip="Abrir la carpeta donde se guardaron los documentos">
                                        <Button.Effect>
                                            <DropShadowEffect Color="#706F6F" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                        </Button.Effect>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#706F6F"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="5"
                                                                    BorderThickness="0">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#5A5959"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>                                    </Button>
                                </StackPanel>                            </Grid>
                        </Border>
                    </Grid>
                    </ScrollViewer>
                </TabItem>
                
                <!-- Tab: Envío Automático -->                <TabItem Header="🚀 Envío Automático" FontSize="14" Padding="15,8">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Configuración SMTP -->
                            <Border Grid.Row="0" Background="#F8F9FA" Padding="15" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Información de Estado SMTP -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="⚙️ Configuración del Servidor SMTP" 
                                                  FontSize="16" FontWeight="SemiBold" 
                                                  Foreground="#2C3E50" Margin="0,0,0,10"/>
                                        
                                        <!-- Estado actual -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <Ellipse Width="12" Height="12" Margin="0,0,8,0" VerticalAlignment="Center">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="{Binding IsEmailConfigured, Converter={StaticResource BooleanToColorConverter}}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock Text="{Binding IsEmailConfigured, Converter={StaticResource BooleanToStatusTextConverter}}" 
                                                      FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Información básica -->
                                        <Grid Margin="0,0,0,10" 
                                             Visibility="{Binding IsEmailConfigured, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Usuario/Email -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="📧 Usuario:" 
                                                      FontWeight="SemiBold" FontSize="11" Margin="0,0,10,2"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SmtpUsername}" 
                                                      FontSize="11" Foreground="#2C3E50"/>
                                            
                                            <!-- Servidor -->
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="🌐 Servidor:" 
                                                      FontWeight="SemiBold" FontSize="11" Margin="0,0,10,2"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" FontSize="11" Foreground="#2C3E50">
                                                <Run Text="{Binding SmtpServer}"/>
                                                <Run Text=":" Foreground="#7F8C8D"/>
                                                <Run Text="{Binding SmtpPort}" FontWeight="SemiBold"/>
                                                <Run Text=" (SSL: " Foreground="#7F8C8D"/>
                                                <Run Text="{Binding EnableSsl}" FontWeight="SemiBold"/>
                                                <Run Text=")" Foreground="#7F8C8D"/>
                                            </TextBlock>
                                            
                                            <!-- Estado de credenciales -->
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="🔐 Credenciales:" 
                                                      FontWeight="SemiBold" FontSize="11" Margin="0,0,10,2"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Guardadas de forma segura" 
                                                      FontSize="11" Foreground="#27AE60" FontStyle="Italic"/>
                                        </Grid>

                                        <TextBlock Text="Configure el servidor SMTP para habilitar el envío automático de correos electrónicos"
                                                  FontSize="11" Foreground="#7F8C8D"
                                                  Visibility="{Binding IsEmailConfigured, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=Visibility}"/>
                                    </StackPanel>                                    <!-- Botones de Configuración SMTP con tema corporativo -->
                                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                                        <!-- Botón Principal de Configuración -->
                                        <Button Content="⚙️ Configurar SMTP" 
                                               Background="#118938" Foreground="White"
                                               FontFamily="Segoe UI"
                                               Padding="25,15" BorderThickness="0" FontWeight="Bold"
                                               FontSize="16"
                                               Click="ConfigureSmtp_Click"
                                               VerticalAlignment="Center"
                                               ToolTip="Abrir ventana de configuración avanzada del servidor SMTP"
                                               Cursor="Hand"
                                               Margin="0,0,0,10">
                                            <Button.Effect>
                                                <DropShadowEffect Color="#118938" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                            </Button.Effect>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#118938"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#0F7A30"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Botón de Test Rápido -->
                                        <Button Content="🧪 Probar Conexión" 
                                               Background="#2B8E3F" Foreground="White"
                                               FontFamily="Segoe UI"
                                               Padding="15,8" BorderThickness="0" FontWeight="SemiBold"
                                               FontSize="12"
                                               Command="{Binding SendTestEmailCommand}"
                                               IsEnabled="{Binding IsEmailConfigured}"
                                               ToolTip="Enviar un correo de prueba rápido"
                                               Cursor="Hand">
                                            <Button.Effect>
                                                <DropShadowEffect Color="#2B8E3F" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                            </Button.Effect>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#2B8E3F"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#257A37"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Background" Value="#BDC3C7"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>                                </Grid>
                            </Border>
                            
                            <!-- Título con tema corporativo -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <TextBlock Text="🚀 Envío Automático de Documentos" 
                                          FontFamily="Segoe UI"
                                          FontSize="16" FontWeight="Bold" 
                                          Foreground="#118938" Margin="0,0,10,0"/>
                                <Border Background="#118938" CornerRadius="12" Padding="8,3">
                                    <TextBlock Text="NUEVO" FontFamily="Segoe UI" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <!-- Selección de Excel de correos -->
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>                                <!-- Archivo Excel de correos con tema corporativo -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📊 Excel con Correos de Empresas:" 
                                              FontFamily="Segoe UI"
                                              FontWeight="SemiBold" Foreground="#118938" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="📁 Seleccionar Excel" 
                                               Background="#118938" Foreground="White"
                                               FontFamily="Segoe UI"
                                               Padding="12,8" BorderThickness="0" FontWeight="SemiBold"
                                               Command="{Binding SelectEmailExcelFileCommand}"
                                               ToolTip="Seleccionar archivo Excel que contiene correos de empresas">
                                            <Button.Effect>
                                                <DropShadowEffect Color="#118938" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                            </Button.Effect>
                                        </Button>
                                        <Button Content="ℹ️" 
                                               Background="#2B8E3F" Foreground="White"
                                               FontFamily="Segoe UI"
                                               Padding="8,8" BorderThickness="0" FontWeight="Bold"
                                               Margin="5,0,0,0"
                                               ToolTip="El Excel debe tener columnas: NIT, Empresa, Correo">
                                            <Button.Effect>
                                                <DropShadowEffect Color="#2B8E3F" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                            </Button.Effect>
                                        </Button>
                                    </StackPanel>
                                    <TextBlock Text="{Binding SelectedEmailExcelFilePath, TargetNullValue='No se ha seleccionado archivo'}" 
                                              FontFamily="Segoe UI"
                                              Margin="0,8,0,0" Foreground="#706F6F" FontStyle="Italic" 
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Información de empresas con tema corporativo -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="📈 Estado del Archivo:" 
                                              FontFamily="Segoe UI"
                                              FontWeight="SemiBold" Foreground="#118938" Margin="0,0,0,8"/>
                                    
                                    <!-- Indicador de archivo válido -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <Ellipse Width="12" Height="12" Margin="0,0,8,0" VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="{Binding HasEmailExcel, Converter={StaticResource BooleanToColorConverter}}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="{Binding HasEmailExcel, Converter={StaticResource BooleanToStatusTextConverter}}" 
                                                  FontFamily="Segoe UI"
                                                  FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Estadísticas del archivo -->
                                    <StackPanel Visibility="{Binding HasEmailExcel, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Foreground="#118938" FontFamily="Segoe UI" FontSize="12">
                                            <Run Text="📊 Empresas con correo: "/>
                                            <Run Text="{Binding CompaniesWithEmail, Mode=OneWay}" FontWeight="Bold"/>
                                        </TextBlock>
                                        <TextBlock Text="✅ Listo para envío automático" 
                                                  FontFamily="Segoe UI"
                                                  Foreground="#2B8E3F" FontSize="11" FontStyle="Italic" Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="⚠️ Seleccione un archivo Excel válido" 
                                              FontFamily="Segoe UI"
                                              Foreground="#F44336" FontSize="11" FontStyle="Italic"
                                              Visibility="{Binding HasEmailExcel, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=Visibility}"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Barra de progreso para envío de emails -->
                            <Grid Grid.Row="6"
                                  Visibility="{Binding IsSendingEmail, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                  <!-- Barra de progreso para envío de emails con tema corporativo -->
                                <controls:SimpleProgressBar Grid.Row="0"
                                                           ProgressValue="{Binding EmailProgressValue}"
                                                           Title="📧 Enviando Documentos por Email"
                                                           StatusMessage="{Binding EmailStatusMessage}"
                                                           BackgroundColor="#118938"
                                                           TitleColor="White"
                                                           PercentageColor="#E8F5E8"
                                                           MessageColor="#C8E6C9"
                                                           BarForeground="#2B8E3F"
                                                           BarBackground="#1B5E20"
                                                           BarHeight="18"/><!-- Botón de cancelar envío de emails -->
                                <Button Grid.Row="2"
                                       Content="❌ Cancelar Envío" 
                                       Background="#DC3545" Foreground="White" 
                                       Padding="10,6" BorderThickness="0" 
                                       FontWeight="SemiBold" FontSize="11"
                                       HorizontalAlignment="Center"
                                       Command="{Binding CancelEmailSendingCommand}"
                                       ToolTip="Cancelar el envío de emails en curso"/>
                            </Grid>

                            <!-- Botón de envío automático con tema corporativo -->
                            <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="🚀 Enviar Documentos Automáticamente"
                                       Background="#118938" Foreground="White"
                                       FontFamily="Segoe UI"
                                       Padding="25,12" BorderThickness="0" FontWeight="Bold"
                                       FontSize="14"
                                       Command="{Binding SendDocumentsAutomaticallyCommand}"
                                       IsEnabled="{Binding CanSendAutomatically}"
                                       ToolTip="Envía automáticamente cada documento al correo correspondiente según el Excel">
                                    <Button.Effect>
                                        <DropShadowEffect Color="#118938" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                    </Button.Effect>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#118938"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#0F7A30"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#CCCCCC"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>                                </Button>
                            </StackPanel>
                        </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</UserControl>
