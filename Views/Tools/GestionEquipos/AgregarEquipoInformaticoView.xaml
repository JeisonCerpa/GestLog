<Window x:Class="GestLog.Views.Tools.GestionEquipos.AgregarEquipoInformaticoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:GestLog.Converters"
        xmlns:vm="clr-namespace:GestLog.ViewModels.Tools.GestionEquipos"
        Title="Agregar Equipo Informático" Height="720" Width="1280" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#FAFAFA">    <Window.Resources>
        <conv:TipoMemoriaTooltipConverter x:Key="TipoMemoriaTooltipConverter"/>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <conv:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter"/>
        <conv:TipoDiscoToStringConverter x:Key="TipoDiscoToStringConverter"/>
        <conv:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter"/>
        <DataTemplate x:Key="SlotRamTemplate">
            <Border Margin="4" Padding="8" Background="#FFF" CornerRadius="6" BorderBrush="#DDD" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Slot: " FontWeight="Bold" />
                        <TextBlock Text="{Binding NumeroSlot}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1">
                        <TextBlock Text="Tipo:" FontWeight="Bold" />
                        <TextBox Text="{Binding TipoMemoria}" Margin="0,0,0,4" />
                        <TextBlock Text="Capacidad (GB):" FontWeight="Bold" />
                        <TextBox Text="{Binding CapacidadGB}" Margin="0,0,0,4" />
                        <TextBlock Text="Marca:" FontWeight="Bold" />
                        <TextBox Text="{Binding Marca}" Margin="0,0,0,4" />
                        <TextBlock Text="Frecuencia:" FontWeight="Bold" />
                        <TextBox Text="{Binding Frecuencia}" Margin="0,0,0,4" />
                        <TextBlock Text="Observaciones:" FontWeight="Bold" />
                        <TextBox Text="{Binding Observaciones}" Margin="0,0,0,4" />
                        <!-- Mostrar "No ocupado" si Ocupado = false -->
                        <TextBlock Text="No ocupado" Foreground="#C00" FontWeight="Bold" FontSize="14" Visibility="{Binding Ocupado, Converter={StaticResource InverseBooleanToVisibilityConverter}}" Margin="0,8,0,0" />
                    </StackPanel>
                    <Button Grid.Column="2" Content="Eliminar" Tag="{Binding}" Command="{Binding DataContext.EliminarRamCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="8,0,0,0" />
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="40">
        <Grid>
            <!-- Contenido principal -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Margin="0">
                    <!-- Título -->
                    <TextBlock Text="Agregar Equipo Informático" FontSize="22" FontWeight="Bold" Foreground="#118938" Margin="0,0,0,24" HorizontalAlignment="Left"/>
                    <!-- Datos básicos -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Columna 1 -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="8">
                            <TextBlock Text="Código" FontWeight="Bold"/>
                            <TextBox Height="32" Text="{Binding Codigo}" />
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="8">
                            <TextBlock Text="Usuario Asignado" FontWeight="Bold"/>
                            <!-- ComboBox filtrado -->
                            <ComboBox Height="32"
                                      ItemsSource="{Binding PersonasFiltradas}"
                                      SelectedItem="{Binding PersonaAsignada, Mode=TwoWay}"
                                      DisplayMemberPath="NombreCompleto"
                                      IsEditable="True"
                                      IsTextSearchEnabled="False"
                                      Text="{Binding FiltroPersonaAsignada, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="2" Margin="8">
                            <TextBlock Text="Nombre de Equipo" FontWeight="Bold"/>
                            <TextBox Height="32" Text="{Binding NombreEquipo}" />
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="3" Margin="8">
                            <TextBlock Text="Sede" FontWeight="Bold"/>
                            <ComboBox Height="32" SelectedValue="{Binding Sede, Mode=TwoWay}" SelectedValuePath="Content">
                                <ComboBoxItem Content="Administrativa - Barranquilla" />
                                <ComboBoxItem Content="Taller - Barranquilla" />
                                <ComboBoxItem Content="Bodega - Bayunca" />
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="4" Margin="8">
                            <TextBlock Text="Observaciones" FontWeight="Bold"/>
                            <TextBox Height="60" AcceptsReturn="True" Text="{Binding Observaciones}" />
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="5" Margin="8">
                            <TextBlock Text="Código AnyDesk" FontWeight="Bold"/>
                            <TextBox Height="32" Text="{Binding CodigoAnydesk}" />
                        </StackPanel>
                        <!-- Columna 2 -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="8" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <TextBlock Text="Marca" FontWeight="Bold"/>
                            <TextBox Height="32" Width="220" Text="{Binding Marca}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="8">
                            <TextBlock Text="Modelo" FontWeight="Bold"/>
                            <TextBox Height="32" Text="{Binding Modelo}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="2" Margin="8">
                            <TextBlock Text="Procesador" FontWeight="Bold"/>
                            <TextBox Height="32" Text="{Binding Procesador}" />
                        </StackPanel>                    <StackPanel Grid.Column="1" Grid.Row="3" Margin="8">
                            <TextBlock Text="Sistema Operativo" FontWeight="Bold"/>
                            <TextBox Height="32" Text="{Binding So}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="4" Margin="8">
                            <TextBlock Text="Serial" FontWeight="Bold"/>
                            <TextBox Height="32" Text="{Binding SerialNumber}" />
                        </StackPanel>
                        <!-- Columna 3: Espacio para futuro uso o campos extendidos -->
                    </Grid>
                    <!-- Sección RAM -->
                    <GroupBox Header="Memoria RAM" Margin="0,0,0,16">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ListaRam}" ItemTemplate="{StaticResource SlotRamTemplate}" />
                            <Button Content="Agregar RAM" Width="120" Margin="0,8,0,0" HorizontalAlignment="Left" Command="{Binding AgregarRamCommand}" />
                        </StackPanel>
                    </GroupBox>
                    <!-- Sección Discos -->
                    <GroupBox Header="Discos" Margin="0,0,0,16">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ListaDiscos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="4" Padding="8" Background="#FFF" CornerRadius="6" BorderBrush="#DDD" BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,12,0">
                                                    <TextBlock Text="Disco: " FontWeight="Bold" />
                                                    <TextBlock Text="{Binding NumeroDisco}" />
                                                </StackPanel>                                            <StackPanel Orientation="Vertical" Grid.Column="1">
                                                    <TextBlock Text="Tipo:" FontWeight="Bold" />
                                                    <TextBox Text="{Binding Tipo, Converter={StaticResource TipoDiscoToStringConverter}}" Margin="0,0,0,4" />
                                                    <TextBlock Text="Capacidad (GB):" FontWeight="Bold" />
                                                    <TextBox Text="{Binding CapacidadGB}" Margin="0,0,0,4" />
                                                    <TextBlock Text="Marca:" FontWeight="Bold" />
                                                    <TextBox Text="{Binding Marca}" Margin="0,0,0,4" />
                                                    <TextBlock Text="Modelo:" FontWeight="Bold" />
                                                    <TextBox Text="{Binding Modelo}" Margin="0,0,0,4" />
                                                </StackPanel>
                                                <Button Grid.Column="2" Content="Eliminar" Tag="{Binding}" Command="{Binding DataContext.EliminarDiscoCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="8,0,0,0" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Button Content="Agregar Disco" Width="120" Margin="0,8,0,0" HorizontalAlignment="Left"
                                    Command="{Binding AgregarDiscoManualCommand}"
                                    IsEnabled="{Binding CanAgregarDiscoManual}"
                                    Opacity="{Binding CanAgregarDiscoManual, Converter={StaticResource BooleanToOpacityConverter}}"/>
                        </StackPanel>
                    </GroupBox>                <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                        <Button Content="Obtener campos automáticos" Width="180" Height="38" Margin="0,0,16,0"
                                Command="{Binding ObtenerCamposAutomaticosCommand}"
                                IsEnabled="{Binding CanObtenerCamposAutomaticos}"
                                Opacity="{Binding CanObtenerCamposAutomaticos, Converter={StaticResource BooleanToOpacityConverter}}"
                                ToolTip="Detectar marca, RAM, discos y otros campos automáticamente"/>
                        <Button Content="Cancelar" Width="120" Height="38" Margin="0,0,16,0" Click="BtnCancelar_Click"/>
                        <Button Content="Guardar" Width="140" Height="38" Background="#118938" Foreground="White"
                                Command="{Binding GuardarEquipoCommand}"
                                IsEnabled="{Binding CanGuardarEquipo}"
                                Opacity="{Binding CanGuardarEquipo, Converter={StaticResource BooleanToOpacityConverter}}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <!-- Spinner superpuesto -->
            <Grid x:Name="LoadingOverlay"
                  Background="#80000000" Panel.ZIndex="100">
                <Grid.Visibility>
                    <MultiBinding Converter="{StaticResource MultiBooleanToVisibilityConverter}" ConverterParameter="OR">
                        <Binding Path="IsLoadingRam" />
                        <Binding Path="IsLoadingDiscos" />
                    </MultiBinding>
                </Grid.Visibility>
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border Background="#FFF" CornerRadius="16" Padding="32" Opacity="0.95">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="80" Height="18" Margin="0,0,0,12"/>
                            <TextBlock Text="Cargando información del equipo..." Foreground="#118938" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
