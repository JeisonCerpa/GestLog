<Window x:Class="GestLog.Views.Tools.GestionEquipos.AgregarEquipoInformaticoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:GestLog.Converters"
        xmlns:modelsEntities="clr-namespace:GestLog.Modules.GestionEquiposInformaticos.Models.Entities"
        mc:Ignorable="d"
        Title="Agregar Equipo Informático"
        Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        >
    <Window.Resources>
        <conv:TipoMemoriaTooltipConverter x:Key="TipoMemoriaTooltipConverter"/>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <conv:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter"/>
        <conv:TipoDiscoToStringConverter x:Key="TipoDiscoToStringConverter"/>
        <conv:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter"/>
        <DataTemplate x:Key="SlotRamTemplate">
            <Border Margin="4" Padding="8" Background="#FFFFFF" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1"
                    UseLayoutRounding="True" SnapsToDevicePixels="True">
                <!-- Ahora la tarjeta tiene dos filas: fila 0 -> Slot + botón; fila 1 -> campos debajo -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Fila superior: Slot y número -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Slot:" FontWeight="Bold" Foreground="#504F4E"
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBlock Text="{Binding NumeroSlot}" Foreground="#706F6F" Margin="8,0,0,0"
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                    </StackPanel>

                    <!-- Botón eliminar en la misma fila, alineado a la derecha -->
                    <Button Grid.Row="0" Grid.Column="1" Command="{Binding DataContext.EliminarRamCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Width="28" Height="28"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="0,0,0,0"
                            ToolTip="Eliminar RAM"
                            IsEnabled="{Binding DataContext.CanEliminarRam, RelativeSource={RelativeSource AncestorType=Window}}"
                            Opacity="{Binding DataContext.CanEliminarRam, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToOpacityConverter}}"
                            Focusable="False"
                            Panel.ZIndex="10">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#C0392B" CornerRadius="16" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" SnapsToDevicePixels="True">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Viewbox Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Canvas Width="12" Height="12">
                                <Path Stroke="White" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M2,2 L10,10 M10,2 L2,10" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <!-- Fila inferior: campos desplegados debajo (ocupan ambas columnas) -->
                    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                        <TextBlock Text="Tipo:" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBox Text="{Binding TipoMemoria}" Margin="0,0,0,4" Background="#FAFAFA" 
                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                        <TextBlock Text="Capacidad (GB):" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBox Text="{Binding CapacidadGB}" Margin="0,0,0,4" Background="#FAFAFA" 
                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                        <TextBlock Text="Marca:" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBox Text="{Binding Marca}" Margin="0,0,0,4" Background="#FAFAFA" 
                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                        <TextBlock Text="Frecuencia:" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBox Text="{Binding Frecuencia}" Margin="0,0,0,4" Background="#FAFAFA" 
                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                        <TextBlock Text="Observaciones:" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBox Text="{Binding Observaciones}" Margin="0,0,0,4" Background="#FAFAFA" 
                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                        <TextBlock Text="No ocupado" Foreground="#C0392B" FontWeight="Bold" FontSize="14" 
                                   Visibility="{Binding Ocupado, Converter={StaticResource InverseBooleanToVisibilityConverter}}" 
                                   Margin="0,8,0,0" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
        <DropShadowEffect x:Key="DropShadowEffect" Color="#504F4E" BlurRadius="8" ShadowDepth="2" Opacity="0.18" />
        <DataTemplate DataType="{x:Type modelsEntities:DiscoEntity}">
            <Border Margin="4" Padding="8" Background="#FFFFFF" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1"
                    UseLayoutRounding="True" SnapsToDevicePixels="True">
                <!-- Estructura de dos filas: fila 0 -> Disco + botón; fila 1 -> campos debajo -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Fila superior: Disco y número -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Disco:" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBlock Text="{Binding NumeroDisco}" Foreground="#706F6F" Margin="8,0,0,0" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                    </StackPanel>

                    <!-- Botón eliminar en la misma fila -->
                    <Button Grid.Row="0" Grid.Column="1" Command="{Binding DataContext.EliminarDiscoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Width="28" Height="28"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="0,0,0,0"
                            ToolTip="Eliminar Disco"
                            IsEnabled="{Binding DataContext.CanEliminarDisco, RelativeSource={RelativeSource AncestorType=Window}}"
                            Opacity="{Binding DataContext.CanEliminarDisco, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToOpacityConverter}}"
                            Focusable="False"
                            Panel.ZIndex="10">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#C0392B" CornerRadius="16" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" SnapsToDevicePixels="True">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Viewbox Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Canvas Width="12" Height="12">
                                <Path Stroke="White" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M2,2 L10,10 M10,2 L2,10" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <!-- Fila inferior: campos debajo que ocupan ambas columnas -->
                    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                        <TextBlock Text="Tipo:" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <ComboBox ItemsSource="{Binding DataContext.TiposDisco, RelativeSource={RelativeSource AncestorType=Window}}"
                                  SelectedItem="{Binding Tipo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,0,0,4" Background="#FAFAFA" 
                                  SnapsToDevicePixels="True" UseLayoutRounding="True" />
                        <TextBlock Text="Capacidad (GB):" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBox Text="{Binding CapacidadGB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Background="#FAFAFA" 
                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                        <TextBlock Text="Marca:" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBox Text="{Binding Marca, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Background="#FAFAFA" 
                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                        <TextBlock Text="Modelo:" FontWeight="Bold" Foreground="#504F4E" 
                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        <TextBox Text="{Binding Modelo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Background="#FAFAFA" 
                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
        <!-- Template para Conexiones de Red -->
        <DataTemplate x:Key="ConexionTemplate">
            <Border Margin="4" Padding="8" Background="#FFFFFF" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1"
                    UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Campos editables -->
                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Adaptador:" FontWeight="Bold" Foreground="#504F4E" 
                                           TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                <TextBox Text="{Binding Adaptador, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Background="#FAFAFA" 
                                         SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                <TextBlock Text="MAC:" FontWeight="Bold" Foreground="#504F4E" 
                                           TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                <TextBox Text="{Binding DireccionMAC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Background="#FAFAFA" 
                                         SnapsToDevicePixels="True" UseLayoutRounding="True" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                <TextBlock Text="IPv4:" FontWeight="Bold" Foreground="#504F4E" 
                                           TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                <TextBox Text="{Binding DireccionIPv4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Background="#FAFAFA" 
                                         SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                <TextBlock Text="Máscara:" FontWeight="Bold" Foreground="#504F4E" 
                                           TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                <TextBox Text="{Binding MascaraSubred, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Background="#FAFAFA" 
                                         SnapsToDevicePixels="True" UseLayoutRounding="True" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Gateway:" FontWeight="Bold" Foreground="#504F4E" 
                                           TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                <TextBox Text="{Binding PuertoEnlace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Background="#FAFAFA" 
                                         SnapsToDevicePixels="True" UseLayoutRounding="True" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <!-- Botón eliminar -->
                    <Button Content="Eliminar" Command="{Binding DataContext.EliminarConexionCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Style="{StaticResource CardButtonStyle}" Width="80" Height="32" Grid.Column="1" Margin="8,0,0,0" 
                            SnapsToDevicePixels="True" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template para Periférico Asignado -->
        <DataTemplate x:Key="PerifericoAsignadoTemplate">
            <Border Margin="4" Padding="8" Background="#FFFFFF" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1"
                    UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Información del periférico -->
                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Código: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding Codigo}" Margin="8,0,16,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="Dispositivo: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding Dispositivo}" Margin="8,0,0,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Marca: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding Marca}" Margin="8,0,16,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="Modelo: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding Modelo}" Margin="8,0,16,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="Estado: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding EstadoDescripcion}" Margin="8,0,0,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        </StackPanel>
                    </StackPanel>
                    <!-- Botón desasignar -->
                    <Button Content="Desasignar"
                            Command="{Binding DataContext.DesasignarPerifericoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource CardButtonStyle}"
                            Width="90" Height="32" Grid.Column="1" Margin="8,0,0,0"
                            Background="#C0392B" Foreground="#FFFFFF" BorderBrush="#C0392B" BorderThickness="1"
                            FontWeight="Bold" FontSize="14" Cursor="Hand" Padding="8,0,8,0"
                            IsEnabled="{Binding DataContext.CanDesasignarPeriferico, RelativeSource={RelativeSource AncestorType=Window}}"
                            Opacity="{Binding DataContext.CanDesasignarPeriferico, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToOpacityConverter}}"
                            SnapsToDevicePixels="True" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType">
                        <Button.Effect>
                            <DropShadowEffect Color="#C0392B" BlurRadius="8" ShadowDepth="2" Opacity="0.18" />
                        </Button.Effect>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template para Periférico Disponible -->
        <DataTemplate x:Key="PerifericoDisponibleTemplate">
            <Border Margin="4" Padding="8" Background="#FFFFFF" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1"
                    UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Información del periférico -->
                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Código: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding Codigo}" Margin="8,0,16,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="Dispositivo: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding Dispositivo}" Margin="8,0,0,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Marca: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding Marca}" Margin="8,0,16,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="Modelo: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding Modelo}" Margin="8,0,16,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="Estado: " FontWeight="Bold" Foreground="#504F4E" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock Text="{Binding EstadoDescripcion}" Margin="8,0,0,0" Foreground="#706F6F" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        </StackPanel>
                    </StackPanel>
                    <!-- Botón asignar -->
                    <Button Content="Asignar" 
                            Command="{Binding DataContext.AsignarPerifericoCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            CommandParameter="{Binding}" 
                            Style="{StaticResource CardButtonStyle}" 
                            Width="90" Height="32" Grid.Column="1" Margin="8,0,0,0" 
                            Background="#2B8E3F" Foreground="#FFFFFF" BorderBrush="#2B8E3F" BorderThickness="1"
                            FontWeight="Bold" FontSize="14" Cursor="Hand" Padding="8,0,8,0"
                            IsEnabled="{Binding DataContext.CanGuardarEquipo, RelativeSource={RelativeSource AncestorType=Window}}"
                            Opacity="{Binding DataContext.CanGuardarEquipo, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToOpacityConverter}}"
                            SnapsToDevicePixels="True" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType">
                        <Button.Effect>
                            <DropShadowEffect Color="#2B8E3F" BlurRadius="8" ShadowDepth="2" Opacity="0.18" />
                        </Button.Effect>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Border Background="#FFFFFF" CornerRadius="12" Padding="0" Effect="{DynamicResource DropShadowEffect}">
                <StackPanel>
                    <!-- Encabezado -->
                    <Border Background="#F4FFF6" CornerRadius="12,12,0,0" Padding="32,24,32,24" BorderBrush="#2B8E3F" BorderThickness="0,0,0,1"
                            UseLayoutRounding="True" SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Assets/image001.ico" Width="38" Height="38" Margin="0,0,12,0" 
                                   UseLayoutRounding="True" SnapsToDevicePixels="True" />
                            <TextBlock Text="Agregar Equipo Informático" FontSize="28" FontWeight="Bold" Foreground="#118938" VerticalAlignment="Center" 
                                       TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                        </StackPanel>
                    </Border>
                    <!-- Sección principal -->
                    <Grid Margin="32,0,32,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.2*" />
                            <ColumnDefinition Width="0.1*" />
                            <ColumnDefinition Width="1.2*" />
                        </Grid.ColumnDefinitions>
                        <!-- Datos del equipo -->
                        <Border Grid.Column="0" Background="#FAFAFA" CornerRadius="8" Padding="24" Margin="0,24,0,24" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Datos principales" FontSize="16" FontWeight="Bold" Foreground="#2B8E3F" Margin="0,0,0,12" 
                                           TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                <Separator Margin="0,0,0,12" />
                                <!-- Datos que llena el usuario, arriba -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,8">
                                        <TextBlock Text="Código *" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" Text="{Binding Codigo}" CharacterCasing="Upper" Background="#FFFFFF" ToolTip="Código interno del equipo" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,0,8">
                                        <TextBlock Text="Código AnyDesk" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" Text="{Binding CodigoAnydesk}" Background="#FFFFFF" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,8,8">
                                        <TextBlock Text="Usuario Asignado *" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <ComboBox Height="32" IsEditable="True" ItemsSource="{Binding PersonasFiltradas}" SelectedItem="{Binding PersonaAsignada}" Text="{Binding FiltroPersonaAsignada, Mode=TwoWay}" Background="#FFFFFF" ToolTip="Buscar y seleccionar usuario" DisplayMemberPath="NombreCompleto" 
                                                  SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="8,0,0,8">
                                        <TextBlock Text="Estado" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <ComboBox Height="32" SelectedValue="{Binding Estado, Mode=TwoWay}" SelectedValuePath="Content" Background="#FFFFFF" ToolTip="Seleccionar estado del equipo"
                                                  SnapsToDevicePixels="True" UseLayoutRounding="True">
                                            <ComboBoxItem Content="Activo" />
                                            <ComboBoxItem Content="Dado de baja" />
                                            <ComboBoxItem Content="En reparación" />
                                            <ComboBoxItem Content="En mantenimiento" />
                                            <ComboBoxItem Content="Inactivo" />
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,8,8">
                                        <TextBlock Text="Costo" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" 
                                                 Text="{Binding Costo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:C0}, ConverterCulture=es-CO}"
                                                 Background="#FFFFFF" 
                                                 HorizontalContentAlignment="Right"
                                                 ToolTip="Costo en COP" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="8,0,0,8">
                                        <TextBlock Text="Fecha de Compra" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <DatePicker Height="32" SelectedDate="{Binding FechaCompra}" Background="#FFFFFF" 
                                                    SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                </Grid>
                                <!-- Resto de campos debajo -->
                                <TextBlock Text="Información adicional" FontSize="15" FontWeight="Bold" Foreground="#2B8E3F" Margin="0,0,0,8" 
                                           TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,8">
                                        <TextBlock Text="Nombre del Equipo *" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" Text="{Binding NombreEquipo}" Background="#FFFFFF" ToolTip="Nombre visible en red" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,8,8">
                                        <TextBlock Text="Sede" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <ComboBox Height="32" SelectedValue="{Binding Sede, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content" Background="#FFFFFF" ToolTip="Seleccionar sede" SelectedIndex="0"
                                                  SnapsToDevicePixels="True" UseLayoutRounding="True">
                                            <ComboBoxItem Content="Administrativa - Barranquilla" />
                                            <ComboBoxItem Content="Taller - Barranquilla" />
                                            <ComboBoxItem Content="Bodega - Bayunca" />
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,8,8">
                                        <TextBlock Text="Marca" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" Text="{Binding Marca}" Background="#FFFFFF" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="0" Grid.Row="3" Margin="0,0,8,8">
                                        <TextBlock Text="Modelo" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" Text="{Binding Modelo}" Background="#FFFFFF" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,0,8">
                                        <TextBlock Text="Sistema Operativo" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" Text="{Binding So}" Background="#FFFFFF" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="8,0,0,8">
                                        <TextBlock Text="Serial" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" Text="{Binding SerialNumber}" Background="#FFFFFF" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="8,0,0,8">
                                        <TextBlock Text="Procesador" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="32" Text="{Binding Procesador}" Background="#FFFFFF" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="3" Margin="8,0,0,8">
                                        <TextBlock Text="Observaciones" FontWeight="Bold" Foreground="#504F4E" 
                                                   TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                        <TextBox Height="64" Text="{Binding Observaciones}" AcceptsReturn="True" Background="#FFFFFF" 
                                                 SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <!-- Separador vertical -->
                        <Rectangle Grid.Column="1" Width="1" Fill="#DDD" Margin="16,0" />
                        <!-- Botones principales -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,24,0,24" Orientation="Vertical">
                            <Button Content="Obtener campos automáticos" Width="Auto" MinWidth="200" Height="40" Margin="0,0,0,16"
                                    Command="{Binding ObtenerCamposAutomaticosCommand}"
                                    IsEnabled="{Binding CanObtenerCamposAutomaticos}"
                                    Opacity="{Binding CanObtenerCamposAutomaticos, Converter={StaticResource BooleanToOpacityConverter}}"
                                    Background="#118938" Foreground="#FFFFFF" FontWeight="Bold" BorderBrush="#2B8E3F" BorderThickness="1"
                                    Cursor="Hand"
                                    Padding="24,0,24,0"
                                    Style="{StaticResource CardButtonStyle}"
                                    FontSize="16" SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType"
                                    ToolTip="Detectar marca, RAM, discos, conexiones y otros campos automáticamente">
                                <Button.Effect>
                                    <DropShadowEffect Color="#118938" BlurRadius="8" ShadowDepth="2" Opacity="0.25" />
                                </Button.Effect>
                            </Button>
                            <Button Content="Guardar" Width="Auto" MinWidth="200" Height="40" Command="{Binding GuardarCommand}" Click="BtnGuardar_Click"
                                    IsEnabled="{Binding CanGuardarEquipo}"
                                    Opacity="{Binding CanGuardarEquipo, Converter={StaticResource BooleanToOpacityConverter}}"
                                    Background="#2B8E3F" Foreground="#FFFFFF" FontWeight="Bold" BorderBrush="#118938" BorderThickness="1" Margin="0,0,0,16"
                                    Cursor="Hand"
                                    Padding="24,0,24,0"
                                    Style="{StaticResource CardButtonStyle}"
                                    FontSize="16" SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType">
                                <Button.Effect>
                                    <DropShadowEffect Color="#2B8E3F" BlurRadius="8" ShadowDepth="2" Opacity="0.25" />
                                </Button.Effect>
                            </Button>
                            <!-- Mostrar botón 'Dar de baja' sólo en modo edición -->
                            <Button Content="Dar de baja" Width="Auto" MinWidth="200" Height="40" Command="{Binding DarDeBajaCommand}"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Background="#C0392B" Foreground="#FFFFFF" FontWeight="Bold" BorderBrush="#C0392B" BorderThickness="1" Margin="0,0,0,16"
                                    Cursor="Hand"
                                    Padding="24,0,24,0"
                                    Style="{StaticResource CardButtonStyle}"
                                    FontSize="16" SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType"/>
                            <Button Content="Cancelar" Width="Auto" MinWidth="200" Height="40" Command="{Binding CancelarCommand}" Click="BtnCancelar_Click"
                                    Background="#C0392B" Foreground="#FFFFFF" FontWeight="Bold" BorderBrush="#C0392B" BorderThickness="1"
                                    Cursor="Hand"
                                    Padding="24,0,24,0"
                                    Style="{StaticResource CardButtonStyle}"
                                    FontSize="16" SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType">
                                <Button.Effect>
                                    <DropShadowEffect Color="#C0392B" BlurRadius="8" ShadowDepth="2" Opacity="0.25" />
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </Grid>
                    <!-- Sección RAM -->
                    <GroupBox Header="Memoria RAM" Margin="32,0,32,0" Background="#FFFFFF" BorderBrush="#2B8E3F" BorderThickness="1" Effect="{DynamicResource DropShadowEffect}"
                              UseLayoutRounding="True" SnapsToDevicePixels="True">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ListaRam}" ItemTemplate="{StaticResource SlotRamTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                            <Button Content="Agregar RAM" Width="120" Height="32" Margin="0,8,0,0" HorizontalAlignment="Left" Padding="8,0,8,0" Command="{Binding AgregarRamCommand}" IsEnabled="{Binding CanGuardarEquipo}" Opacity="{Binding CanGuardarEquipo, Converter={StaticResource BooleanToOpacityConverter}}" Style="{StaticResource CardButtonStyle}" Background="#2B8E3F" Foreground="#FFFFFF" BorderBrush="#118938" BorderThickness="1" FontWeight="Bold" FontSize="14" SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" UseLayoutRounding="True" />
                        </StackPanel>
                    </GroupBox>
                    <!-- Sección Discos -->
                    <GroupBox Header="Discos" Margin="32,0,32,24" Background="#FFFFFF" BorderBrush="#2B8E3F" BorderThickness="1" Effect="{DynamicResource DropShadowEffect}"
                              UseLayoutRounding="True" SnapsToDevicePixels="True">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ListaDiscos}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                            <Button Content="Agregar Disco" Width="120" Height="32" Margin="0,8,0,0" HorizontalAlignment="Left" Padding="8,0,8,0" Command="{Binding AgregarDiscoManualCommand}" IsEnabled="{Binding CanAgregarDiscoManual}" Opacity="{Binding CanAgregarDiscoManual, Converter={StaticResource BooleanToOpacityConverter}}" Style="{StaticResource CardButtonStyle}" Background="#2B8E3F" Foreground="#FFFFFF" BorderBrush="#118938" BorderThickness="1" FontWeight="Bold" FontSize="14" SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" UseLayoutRounding="True" />
                        </StackPanel>
                    </GroupBox>

                    <!-- Sección Conexiones de Red -->
                    <GroupBox Header="Conexiones de Red" Margin="32,0,32,24" Background="#FFFFFF" BorderBrush="#2B8E3F" BorderThickness="1" Effect="{DynamicResource DropShadowEffect}"
                              UseLayoutRounding="True" SnapsToDevicePixels="True">
                        <StackPanel>
                            <!-- Botones de acciones -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Content="Agregar Manual" Width="120" Height="32" Margin="0,0,0,0" Padding="8,0,8,0" 
                                        Command="{Binding AgregarConexionManualCommand}" 
                                        IsEnabled="{Binding CanGuardarEquipo}" 
                                        Opacity="{Binding CanGuardarEquipo, Converter={StaticResource BooleanToOpacityConverter}}" 
                                        Style="{StaticResource CardButtonStyle}" Background="#2B8E3F" Foreground="#FFFFFF" BorderBrush="#118938" BorderThickness="1" FontWeight="Bold" FontSize="14" 
                                        SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" UseLayoutRounding="True" />
                            </StackPanel>
                            <!-- Lista de conexiones -->
                            <ItemsControl ItemsSource="{Binding ListaConexiones}" ItemTemplate="{StaticResource ConexionTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </GroupBox>

                    <!-- Sección Periféricos -->
                    <GroupBox Header="Periféricos" Margin="32,0,32,24" Background="#FFFFFF" BorderBrush="#2B8E3F" BorderThickness="1" Effect="{DynamicResource DropShadowEffect}"
                              UseLayoutRounding="True" SnapsToDevicePixels="True">
                        <StackPanel>
                            <!-- Periféricos Asignados -->
                            <Expander Header="Periféricos Asignados" IsExpanded="True" Background="#F7FFF7" Padding="6" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="Cantidad de periféricos asignados: " FontWeight="Bold" Foreground="#504F4E" 
                                               TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                    <TextBlock Text="{Binding PerifericosAsignados.Count, StringFormat='{}{0} periféricos'}" 
                                               Margin="0,0,0,8" Foreground="#706F6F" 
                                               TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />

                                    <ItemsControl ItemsSource="{Binding PerifericosAsignados}" ItemTemplate="{StaticResource PerifericoAsignadoTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </Expander>

                            <!-- Periféricos Disponibles -->
                            <Expander Header="Periféricos Disponibles" IsExpanded="False" Background="#FFF7F7" Padding="6">
                                <StackPanel>
                                    <TextBlock Text="Cantidad de periféricos disponibles: " FontWeight="Bold" Foreground="#504F4E" 
                                               TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />
                                    <TextBlock Text="{Binding PerifericosDisponibles.Count, StringFormat='{}{0} periféricos'}" 
                                               Margin="0,0,0,8" Foreground="#706F6F" 
                                               TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" />

                                    <ItemsControl ItemsSource="{Binding PerifericosDisponibles}" ItemTemplate="{StaticResource PerifericoDisponibleTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
