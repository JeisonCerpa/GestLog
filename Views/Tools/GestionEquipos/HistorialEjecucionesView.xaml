<UserControl x:Class="GestLog.Views.Tools.GestionEquipos.HistorialEjecucionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:GestLog.Converters"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
             Loaded="UserControl_Loaded"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             TextOptions.TextHintingMode="Fixed"
             RenderOptions.EdgeMode="Aliased">    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter" />
        <!-- Storyboards para animaciones fluidas del panel de detalle -->
        <Storyboard x:Key="ShowDetailPanelStoryboard">
            <DoubleAnimation Storyboard.TargetName="DetailPanel"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="400" To="0" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="DetailPanel"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.25"/>
        </Storyboard>
        
        <Storyboard x:Key="HideDetailPanelStoryboard">
            <DoubleAnimation Storyboard.TargetName="DetailPanel"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="0" To="400" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="DetailPanel"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>
        
        <!-- Timeline para optimización de hardware -->
        <Timeline x:Key="OptimizationTimeline" Duration="0:0:0" RepeatBehavior="1x"/>
        
        <!-- Efectos optimizados para renderizado nítido -->
        <DropShadowEffect x:Key="HeaderShadow" 
                          Color="#0F7530" 
                          Direction="270" 
                          ShadowDepth="1" 
                          Opacity="0.08" 
                          BlurRadius="3"
                          RenderingBias="Quality"/>
                          
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#9D9D9C" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Opacity="0.06" 
                          BlurRadius="6"
                          RenderingBias="Quality"/>
                          
        <DropShadowEffect x:Key="ButtonShadow" 
                          Color="#00000015" 
                          Direction="270" 
                          ShadowDepth="1" 
                          Opacity="0.15" 
                          BlurRadius="2"
                          RenderingBias="Quality"/>
        
        <!-- Paleta corporativa de GestLog -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#118938"/><!-- Verde principal GestLog -->
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#2B8E3F"/><!-- Verde secundario -->
        <SolidColorBrush x:Key="SecondaryBrush" Color="#504F4E"/><!-- Gris oscuro -->
        <SolidColorBrush x:Key="AccentBrush" Color="#0F7530"/><!-- Verde oscuro para acentos -->
        <SolidColorBrush x:Key="AccentLightBrush" Color="#7AC943"/><!-- Verde intermedio -->
        <SolidColorBrush x:Key="LightGrayBrush" Color="#FAFAFA"/><!-- Fondo off-white -->
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="BorderLightBrush" Color="#EDF2F7"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#504F4E"/><!-- Gris para texto -->
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#706F6F"/><!-- Gris claro -->
        <SolidColorBrush x:Key="TextMutedBrush" Color="#9D9D9C"/><!-- Gris muy claro -->
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/><!-- Cartas blancas -->
        <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="#FAFBFC"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#C0392B"/><!-- Rojo de error -->
        <SolidColorBrush x:Key="WarningBrush" Color="#F9B233"/><!-- Amarillo/ámbar -->
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/><!-- Verde éxito -->
        
        <!-- Estilos de texto optimizados para renderizado nítido -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="24"/><!-- Ajustado para coincidir con EquiposInformaticosView -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
        
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
        
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
        <!-- DataGrid corporativo optimizado -->
        <Style x:Key="CorporateDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SurfaceElevatedBrush}"/>
            <Setter Property="RowBackground" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="RowHeight" Value="44"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
        
        <Style x:Key="DataGridHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                UseLayoutRounding="True"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"
                                            UseLayoutRounding="True"
                                            SnapsToDevicePixels="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Botones corporativos -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect" Value="{StaticResource ButtonShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                UseLayoutRounding="True"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            UseLayoutRounding="True"
                                            SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
          <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                UseLayoutRounding="True"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            UseLayoutRounding="True"
                                            SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceElevatedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para botones circulares flotantes -->
        <Style x:Key="CircularButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="28" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>        </Style>
        
        <!-- SecondaryButtonStyle (gris) para botones de acción como 'Detalles' -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource TextSecondaryBrush}"/>
        </Style>
        
        <!-- Estilo para TextBlocks dentro del DataGrid -->
        <Style x:Key="DataGridTextBlockStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,8,0"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
        
        <!-- TextBox corporativo -->
        <Style x:Key="CorporateTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                UseLayoutRounding="True"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"
                                        UseLayoutRounding="True"
                                        SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- ComboBox corporativo -->
        <Style x:Key="CorporateComboBox" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </UserControl.Resources>    
    <!-- Fondo principal optimizado -->
    <Grid Background="{StaticResource LightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/><!-- Header -->
            <RowDefinition Height="Auto"/><!-- Estadísticas (igual a EquiposInformaticosView) -->
            <RowDefinition Height="*"/><!-- Contenido: filtros + listado + botones -->
        </Grid.RowDefinitions>

        <!-- Header corporativo con gradiente verde (idéntico) -->
        <Border Grid.Row="0" Padding="24,16" Margin="16,16,16,0" CornerRadius="8,8,0,0" Effect="{StaticResource HeaderShadow}">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#118938" Offset="0"/>
                    <GradientStop Color="#2B8E3F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel UseLayoutRounding="True" SnapsToDevicePixels="True">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,16,0" Width="56" Height="56" Effect="{StaticResource CardShadow}">
                        <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Historial de Ejecuciones" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Text="Registro completo de mantenimientos ejecutados" Style="{StaticResource SubHeaderTextStyle}" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource SubHeaderTextStyle}" HorizontalAlignment="Right" FontWeight="Medium"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Estadísticas: mismo layout que EquiposInformaticosView (adaptadas a Historial) -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" Padding="20" Margin="16,0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,1,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalEjecuciones}" Style="{StaticResource SectionTitleStyle}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Total" Style="{StaticResource SubHeaderTextStyle}" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding EjecutadasCount}" Style="{StaticResource SectionTitleStyle}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Ejecutados" Style="{StaticResource SubHeaderTextStyle}" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding NoEjecutadosCount}" Style="{StaticResource SectionTitleStyle}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource WarningBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="No Ejecutados" Style="{StaticResource SubHeaderTextStyle}" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding AtrasadasCount}" Style="{StaticResource SectionTitleStyle}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource ErrorBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Atrasados" Style="{StaticResource SubHeaderTextStyle}" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding EnProcesoCount}" Style="{StaticResource SectionTitleStyle}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="En Proceso" Style="{StaticResource SubHeaderTextStyle}" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>                <StackPanel Grid.Column="5" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="&#xE72C;" Command="{Binding CargarItemsCommand}" ToolTip="Actualizar historial" Style="{StaticResource CircularButtonStyle}" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                    <Button Content="⭱" Command="{Binding ExportarItemsCommand}" ToolTip="Exportar historial" Style="{StaticResource CircularButtonStyle}" Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal: filtros + DataGrid + detalle (estructura igual a Equipos) -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="20" Margin="16,0,16,16" CornerRadius="0,0,8,8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filtros: left = filtro + exportar filtrados, right = toggle Dados de baja -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock Text="Filtrar:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Medium"/>
                        <TextBox Width="300" Padding="8" VerticalAlignment="Center" Text="{Binding FiltroCodigo, UpdateSourceTrigger=PropertyChanged}" BorderBrush="{StaticResource BorderBrush}"/>
                        <!-- Botón "Exportar filtrados" eliminado según solicitud -->
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <ToggleButton x:Name="toggleDadoDeBaja" Width="110" Height="32" IsChecked="{Binding ShowDadoDeBaja, Mode=TwoWay}" ToolTip="Mostrar items dados de baja" VerticalAlignment="Center">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Background" Value="#F0F0F0"/>
                                    <Setter Property="BorderBrush" Value="#DDD"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid>
                                                    <Border x:Name="SwitchBorder" Background="#F0F0F0" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="16" Height="32" Width="110">
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="#A85B00" BlurRadius="8" ShadowDepth="1" Opacity="0.18"/>
                                                        </Border.Effect>
                                                    </Border>
                                                    <Ellipse x:Name="SwitchKnob" Width="24" Height="24" Margin="4,4,0,4" Fill="#C8C8C8" HorizontalAlignment="Left"/>
                                                    <TextBlock x:Name="SwitchText" Text="Dados de baja" Foreground="#504F4E" FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,18,0"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="SwitchKnob" Property="Fill" Value="#888"/>
                                                        <Setter TargetName="SwitchBorder" Property="Background" Value="#C8C8C8"/>
                                                        <Setter TargetName="SwitchKnob" Property="Margin" Value="82,4,0,4"/>
                                                        <Setter TargetName="SwitchKnob" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#888" BlurRadius="10" ShadowDepth="2" Opacity="0.28"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter TargetName="SwitchText" Property="Foreground" Value="#504F4E"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="SwitchKnob" Property="Fill" Value="#C8C8C8"/>
                                                        <Setter TargetName="SwitchBorder" Property="Background" Value="#F0F0F0"/>
                                                        <Setter TargetName="SwitchKnob" Property="Margin" Value="4,4,0,4"/>
                                                        <Setter TargetName="SwitchKnob" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#706F6F" BlurRadius="6" ShadowDepth="1" Opacity="0.18"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter TargetName="SwitchText" Property="Foreground" Value="#504F4E"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="0" UseLayoutRounding="True" SnapsToDevicePixels="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="600" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>                    <!-- DataGrid principal (columnas específicas del Historial) -->
                    <DataGrid Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Items}" 
                              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" 
                              SelectionMode="Single" RowHeaderWidth="0" GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderBrush}" AlternatingRowBackground="#F9F9F9"
                              FontSize="13" RowHeight="40" ColumnWidth="*"
                              EnableRowVirtualization="True" EnableColumnVirtualization="False"
                              VirtualizingPanel.VirtualizationMode="Standard"
                              ScrollViewer.CanContentScroll="True"
                              SelectedItem="{Binding SelectedEjecucion}">
                        
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.Columns>                            <DataGridTextColumn Header="Código" Binding="{Binding CodigoEquipo}" Width="SizeToCells" MinWidth="110" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Nombre de Equipo" Binding="{Binding NombreEquipo}" Width="*" MinWidth="260" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Año" Binding="{Binding AnioISO}" Width="SizeToCells" MinWidth="80" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Semana" Binding="{Binding SemanaISO}" Width="SizeToCells" MinWidth="90" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Fecha Objetivo" Binding="{Binding FechaObjetivo, StringFormat=dd/MM/yyyy}" Width="SizeToCells" MinWidth="140" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            <DataGridTextColumn Header="Fecha Ejecución" Binding="{Binding FechaEjecucion, StringFormat=dd/MM/yyyy HH:mm}" Width="SizeToCells" MinWidth="160" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            
                            <DataGridTemplateColumn Header="Estado" Width="SizeToCells" MinWidth="160" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4" Padding="8,4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EstadoDescripcion}" Value="Ejecutado">
                                                            <Setter Property="Background" Value="#27AE60"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding EstadoDescripcion}" Value="Atrasado">
                                                            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding EstadoDescripcion}" Value="Pendiente">
                                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding EstadoDescripcion}" Value="En Proceso">
                                                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding EstadoDescripcion}" Foreground="White" FontWeight="SemiBold" FontSize="10" HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="Usuario/Asignación" Binding="{Binding UsuarioAsignadoEquipo}" Width="*" MinWidth="240" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                            
                            <DataGridTemplateColumn Header="" Width="SizeToCells" MinWidth="120" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Detalles" 
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Command="{Binding DataContext.VerDetallePlanCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                MinWidth="88" Width="Auto" Height="32" HorizontalAlignment="Center" Margin="4,0"
                                                Focusable="False"
                                                IsHitTestVisible="True"
                                                ClickMode="Release"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Panel de detalle (idéntico al existente en Historial) -->
                    <Border x:Name="DetailPanel" Grid.Column="1" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="8" Padding="0" Width="400" Effect="{StaticResource CardShadow}" Opacity="0" Visibility="Collapsed" CacheMode="BitmapCache">
                        <Border.RenderTransform>
                            <TranslateTransform X="400"/>
                        </Border.RenderTransform>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding MostrarDetalle}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                                                        <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                                    </ObjectAnimationUsingKeyFrames>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="400" To="0" Duration="0:0:0.35">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="0" To="400" Duration="0:0:0.25"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2"/>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                                                        <DiscreteObjectKeyFrame KeyTime="0:0:0.25" Value="{x:Static Visibility.Collapsed}"/>
                                                    </ObjectAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="8,8,0,0" Padding="20,16">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                        <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="8,6" Margin="0,0,12,0">
                                            <TextBlock Text="&#xE8BC;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Detalle de Ejecución" Style="{StaticResource SectionTitleStyle}" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Button DockPanel.Dock="Right" Content="✕" Command="{Binding CerrarDetalleCommand}" Style="{StaticResource SecondaryButton}" Width="32" Height="32" Padding="0" ToolTip="Cerrar panel de detalle"/>
                                </DockPanel>
                            </Border>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20" ScrollViewer.CanContentScroll="True">
                                <StackPanel>
                                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="16" Margin="0,0,0,16" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Equipo:" Style="{StaticResource LabelTextStyle}" Margin="0,0,12,8"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEjecucion.CodigoEquipo}" Style="{StaticResource ValueTextStyle}"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombre:" Style="{StaticResource LabelTextStyle}" Margin="0,0,12,8"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEjecucion.NombreEquipo}" Style="{StaticResource ValueTextStyle}"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Año / Semana:" Style="{StaticResource LabelTextStyle}" Margin="0,0,12,8"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource ValueTextStyle}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} / {1}">
                                                        <Binding Path="SelectedEjecucion.AnioISO"/>
                                                        <Binding Path="SelectedEjecucion.SemanaISO"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Objetivo:" Style="{StaticResource LabelTextStyle}" Margin="0,0,12,8"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedEjecucion.FechaObjetivo, StringFormat=dd/MM/yyyy}" Style="{StaticResource ValueTextStyle}"/>

                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Ejecución:" Style="{StaticResource LabelTextStyle}" Margin="0,0,12,0"/>
                                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="{Binding SelectedEjecucion.FechaEjecucion, StringFormat=dd/MM/yyyy HH:mm}" Style="{StaticResource ValueTextStyle}"/>
                                                <Border CornerRadius="4" Padding="6,2" Margin="12,0,0,0" Background="{StaticResource PrimaryBrush}">
                                                    <TextBlock Text="{Binding SelectedEjecucion.EstadoDescripcion}" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="16" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}">
                                        <StackPanel>
                                            <TextBlock Text="Checklist" Style="{StaticResource SectionTitleStyle}" Margin="0,0,0,8"/>
                                            <ItemsControl ItemsSource="{Binding SelectedEjecucion.Checklist}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                                            <CheckBox IsChecked="{Binding Completado}" IsEnabled="False" VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Descripcion}" Margin="8,0,0,0" VerticalAlignment="Center" Style="{StaticResource ValueTextStyle}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                </Grid>

                <!-- Espacio para botones de acción (footer interno) -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <!-- reservado para acciones adicionales -->
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
