<!-- filepath: e:\Softwares\GestLog\Views\Tools\GestionEquipos\RegistroEjecucionPlanDialog.xaml -->
<Window x:Class="GestLog.Views.Tools.GestionEquipos.RegistroEjecucionPlanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:GestLog.Converters"
        mc:Ignorable="d"
        Title="Registrar Ejecución de Plan"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Manual"
        ResizeMode="CanResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Window.Resources>
        <!-- Paleta y estilos basados en PlanDetalleModal -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#118938"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0F7530"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#F6F7F9"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E6E9EC"/>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#2B8E3F" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Height" Value="36" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#607D8B" />
            <Setter Property="BorderBrush" Value="#E0E6EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Height" Value="36" />
            <Setter Property="MinWidth" Value="120" />
        </Style>

        <!-- Botón de cierre con alto contraste para el header -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#29FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#12FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo específico para el botón Guardar: más prominente y con sombra -->
        <Style x:Key="GuardarButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="MinWidth" Value="140" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#2B8E3F" BlurRadius="8" ShadowDepth="2" Opacity="0.22" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#247C35" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Overlay + modal interior similar a PlanDetalleModal -->
    <Grid MouseLeftButtonDown="Overlay_MouseLeftButtonDown" UseLayoutRounding="True" SnapsToDevicePixels="True" Background="#80000000">
        <!-- Animación de entrada removida (sin fade) -->
        <Border MaxWidth="880" MaxHeight="760" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}">
            <Grid MouseLeftButtonDown="Panel_MouseLeftButtonDown">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header con gradiente y botón cerrar -->
                <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="18" Background="{StaticResource PrimaryBrush}">
                    <!-- Usar Grid para posicionar título a la izquierda y X en la esquina superior derecha -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Registro de ejecución" Style="{StaticResource HeaderTextStyle}" FontSize="18" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" x:Name="CloseButton" Content="&#xE711;" Click="Cerrar_Click" Style="{StaticResource CloseButton}" ToolTip="Cerrar (Esc)" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-6, -6,0"/>
                    </Grid>
                </Border>

                <!-- Contenido principal: dos columnas (checklist + tarjeta lateral) -->
                <Grid Grid.Row="1" Margin="20" Background="{StaticResource LightGrayBrush}">
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Checklist (izquierda) -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock Text="Checklist" FontWeight="SemiBold" Foreground="#2B8E3F" FontSize="14" VerticalAlignment="Center" />
                                    <TextBlock Text="" Width="12"/>
                                    <TextBlock Text="{Binding FechaObjetivo, StringFormat='Fecha objetivo: {0:dd/MM/yyyy}'}" Foreground="#666" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>

                                <Separator/>

                                <ListView ItemsSource="{Binding Checklist}" HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto" MinHeight="240">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8" Margin="0,4,0,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="36"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox IsChecked="{Binding Completado, Mode=TwoWay}" VerticalAlignment="Center" Margin="4"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Descripcion, TargetNullValue=(sin descripción)}" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <!-- Contador y progreso breve al pie -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                    <TextBlock FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Items completados: {0}/{1}">
                                                <Binding Path="CompletedItems" />
                                                <Binding Path="TotalItems" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>

                            </StackPanel>
                        </Border>

                        <!-- Tarjeta lateral con información y Observaciones -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Información" FontWeight="SemiBold" Foreground="#2B8E3F" Margin="0,0,0,8" />

                                <TextBlock Text="Semana:" FontWeight="Medium" Foreground="#706F6F" />
                                <TextBlock Text="{Binding SemanaISO}" FontWeight="Bold" Margin="0,0,0,8" />

                                <TextBlock Text="Equipo:" FontWeight="Medium" Foreground="#706F6F" />
                                <TextBlock Text="{Binding CodigoEquipo}" FontWeight="Bold" Margin="0,0,0,8" />

                                <TextBlock Text="Responsable:" FontWeight="Medium" Foreground="#706F6F" />
                                <TextBox Text="{Binding ResponsablePlan, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />

                                <Separator/>

                                <TextBlock Text="Resumen en vivo" FontWeight="SemiBold" Margin="0,8,0,4" />
                                <ProgressBar Height="10" Minimum="0" Maximum="100" Value="{Binding PercentComplete}" Margin="0,6,0,8" />
                                <TextBlock Text="{Binding PercentComplete, StringFormat={}{0}%}" Foreground="#666" FontSize="12" HorizontalAlignment="Right" />
                                <TextBlock Text="{Binding ResumenEnVivo}" TextWrapping="Wrap" Foreground="#444" Margin="0,6,0,8"/>

                                <TextBlock Text="Observaciones" FontWeight="SemiBold" Margin="0,8,0,6"/>
                                <TextBox Text="{Binding ObservacionCentral, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         Height="160"
                                         MaxWidth="360"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalAlignment="Stretch"
                                         Margin="0,0,0,4"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                    <Button Content="Guardar" Command="{Binding GuardarCommand}" Style="{StaticResource GuardarButtonStyle}" IsDefault="True" Margin="0,0,0,0"/>
                                </StackPanel>

                            </StackPanel>
                        </Border>

                    </Grid>
                </Grid>

                <!-- Footer (opcional) -->
                <Border Grid.Row="2" Padding="10" Background="Transparent">
                    <TextBlock Text="" />
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
