<UserControl x:Class="GestLog.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestLog.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/logo.png" Width="40" Height="40" Margin="0,0,15,0" 
                       RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="GestLog - Sistema de Gestión" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                
                <!-- Welcome Section -->
                <TextBlock Text="Bienvenido al Sistema GestLog" 
                          FontSize="28" FontWeight="SemiBold" 
                          Foreground="#2C3E50" Margin="0,0,0,15"/>
                
                <TextBlock Text="Sistema modular de gestión que integra múltiples herramientas de software bajo una interfaz unificada." 
                          FontSize="16" Foreground="#34495E" 
                          TextWrapping="Wrap" Margin="0,0,0,30"/>
                
                <!-- Action Cards -->                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                      <!-- Herramientas Card -->
                    <Border Grid.Column="0" Background="#ECF0F1" Padding="25">
                        <StackPanel>
                            <TextBlock Text="🛠️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Herramientas" FontSize="20" FontWeight="SemiBold" 
                                      HorizontalAlignment="Center" Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <TextBlock Text="Accede a todas las herramientas disponibles en el sistema" 
                                      FontSize="14" Foreground="#7F8C8D" TextWrapping="Wrap" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>                            <Button Name="btnIrHerramientas" Content="Ir a Herramientas" 
                                   Background="#3498DB" Foreground="White" 
                                   Padding="15,8" BorderThickness="0" 
                                   FontWeight="SemiBold"
                                   Click="btnIrHerramientas_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Info Card -->
                    <Border Grid.Column="2" Background="#ECF0F1" Padding="25">
                        <StackPanel>
                            <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Información" FontSize="20" FontWeight="SemiBold" 
                                      HorizontalAlignment="Center" Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <TextBlock Text="Estado del sistema y información general de los módulos integrados" 
                                      FontSize="14" Foreground="#7F8C8D" TextWrapping="Wrap" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>                            <Button Name="btnInfo" Content="Ver Información" 
                                   Background="#2ECC71" Foreground="White" 
                                   Padding="15,8" BorderThickness="0" 
                                   FontWeight="SemiBold"
                                   Click="btnInfo_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Test Error Handling Section -->
                <TextBlock Text="Pruebas de Sistema" 
                          FontSize="22" FontWeight="SemiBold" 
                          Foreground="#2C3E50" Margin="0,40,0,20"/>
                
                <Border Background="#ECF0F1" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="⚠️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Pruebas del Manejo de Errores" FontSize="20" FontWeight="SemiBold" 
                                  HorizontalAlignment="Center" Foreground="#2C3E50" Margin="0,0,0,10"/>
                        <TextBlock Text="Ejecutar pruebas para validar el sistema de manejo de errores" 
                                  FontSize="14" Foreground="#7F8C8D" TextWrapping="Wrap" 
                                  HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>
                        <Button Name="btnTestErrorHandler" Content="Ejecutar Pruebas" 
                               Background="#E74C3C" Foreground="White" 
                               Padding="15,8" BorderThickness="0" 
                               FontWeight="SemiBold"
                               Click="btnTestErrorHandler_Click"/>
                    </StackPanel>
                </Border>
                
                <!-- Features Section -->
                <TextBlock Text="Características del Sistema" 
                          FontSize="22" FontWeight="SemiBold" 
                          Foreground="#2C3E50" Margin="0,40,0,20"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,20,20">
                        <TextBlock Text="✅ Arquitectura Modular" FontWeight="SemiBold" FontSize="16" Foreground="#27AE60"/>
                        <TextBlock Text="Integración fácil de nuevas herramientas" FontSize="14" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="20,0,0,20">
                        <TextBlock Text="✅ Interfaz Unificada" FontWeight="SemiBold" FontSize="16" Foreground="#27AE60"/>
                        <TextBlock Text="Navegación consistente entre módulos" FontSize="14" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,20,0">
                        <TextBlock Text="✅ Recursos Centralizados" FontWeight="SemiBold" FontSize="16" Foreground="#27AE60"/>
                        <TextBlock Text="Gestión eficiente de datos y assets" FontSize="14" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="20,0,0,0">
                        <TextBlock Text="✅ Escalable y Mantenible" FontWeight="SemiBold" FontSize="16" Foreground="#27AE60"/>
                        <TextBlock Text="Código organizado y extensible" FontSize="14" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
